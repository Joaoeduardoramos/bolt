{% extends "@templates/default/default-template.twig" %}

{% block main_content %}

<div class="c-bolt-band c-bolt-band--large t-bolt-dark  c-bolt-band--full">

  <div class="o-bolt-wrapper">
    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--large o-bolt-grid--matrix" %}


      {% cell "u-bolt-width-1/1 u-bolt-width-2/3@small" %}
        {% include "@atoms/eyebrow.twig" with {
          text: "Customer Service"
        } %}

        {% include "@atoms/h1.twig" with {
          text: "Deliver game-changing results with real artificial intelligence.",
          size: "xxxlarge"
        } %}

        {% include "@atoms/h2.twig" with {
          type: "subheadline",
          text: "Powered by real AI, Pega Customer Service delivers game-changing results for enterprises.",
          size: "xxlarge"
        } %}

        {% include "@bolt/button.twig" with {
          text: "Call to Action"
        } %}

      {% endcell %}


      {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
        <ul class="o-bolt-ui-list">
          <li class="o-bolt-ui-list__item">
            {% include "@atoms/eyebrow.twig" with {
              text: "Customer Service"
            } %}
            {% include "@atoms/h3.twig" with {
              text: "Personalized. Not Creepy.",
              size: "medium"
            } %}
          </li>

          <li class="o-bolt-ui-list__item">
            {% include "@atoms/eyebrow.twig" with {
              text: "Sales Effectiveness"
            } %}
            {% include "@atoms/h3.twig" with {
