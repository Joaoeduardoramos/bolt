            {% include "@atoms/eyebrow.twig" with {
              text: "Operations & IT"
            } %}
            {% include "@atoms/h3.twig" with {
              text: "Stop Coding. Start Designing.",
              size: "medium"
            } %}
          </li>
        </ul>
      {% endcell %}
    {% endgrid %}




  </div>
</div>



