{
  "name": "bolt",
  "description": "Bolt Design System",
  "private": true,
  "author": "Salem Ghoweri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-design-system/bolt.git"
  },
  "homepage": "https://github.com/bolt-design-system/bolt#readme",
  "bugs": {
    "url": "https://github.com/bolt-design-system/bolt/issues"
  },
  "keywords": [
    "design",
    "system",
    "design system",
    "bolt design system",
    "pattern lab"
  ],
  "scripts": {
    "start": "cd docs-site && yarn run start",
    "setup": "yarn && yarn run bootstrap && yarn run composer",
    "setup:uikit": "cd packages/uikit-workshop && yarn",
    "build": "npm run build:website",
    "build:website": "cd docs-site && yarn run build:prod",
    "build:icons": "npx lerna exec --scope @bolt/components-icons -- yarn run build",
    "build:uikit": "cd packages/uikit-workshop && yarn run build",
    "composer": "npm-run-all --parallel composer:*",
    "composer:pl": "cd docs-site && composer install --no-interaction --prefer-dist",
    "composer:renderer": "cd docs-site/.twig-renderer && composer config vendor-dir ../vendor-renderer && composer install --no-interaction --prefer-dist",
    "bootstrap": "npx lerna bootstrap --reject-cycles",
    "postbootstrap": "yarn run build:icons && yarn run setup:uikit && yarn run build:uikit && node scripts/monorepo-tests.js",
    "deploy": "./scripts/deploy.js",
    "clean:git": "git clean -xdf && rm -rf **/vendor **/node_modules && find . -empty -type d -delete",
    "clean:lerna": "npx lerna clean --yes",
    "clean": "npm run clean:lerna && npm run clean:git",
    "prepublishOnly": "yarn run build && node scripts/monorepo-tests.js",
    "lint:js": "eslint --max-warnings 0 'packages/**/*.js' 'docs-site/**/*.js'",
    "lint:js:fix": "yarn run lint:js --fix",
    "lint:style": "stylelint 'packages/**/*.scss' 'docs-site/**/*.scss' '!example-integrations/drupal-lab/**' '!docs-site/components/schema-form/**' '!packages/uikit-workshop/**' '!**/vendor/**' --config .stylelintrc",
    "lint:style:fix": "yarn run lint:style -- --fix",
    "_lint:twig": "./packages/core-php/vendor/bin/twig-lint lint packages --only-print-errors && ./packages/core-php/vendor/bin/twig-lint lint docs-site --only-print-errors --exclude=example-integrations/drupal-lab",
    "lint:yaml": "npx yamllint 'packages/**/*.yml' --ignore='**/vendor/**'",
    "lint": "npm-run-all --continue-on-error --parallel lint:js lint:style",
    "prepush": "yarn run test && yarn run lint",
    "test:js": "NODE_ENV='test' npx jest --testFailureExitCode 1",
    "_test:js:watch": "jest --watch",
    "_test:php": "cd packages/core-php && composer run test",
    "test": "npm-run-all --parallel test:*"
  },
  "dependencies": {
    "@bolt/config-eslint": "^2.2.1",
    "sassdoc": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "jest": "^23.5.0"
  },
  "devDependencies": {
    "editorconfig-checker": "^1.3.3",
    "git-semver-tags": "^2.0.0",
    "husky": "^0.14.3",
    "lerna": "^3.4.3",
    "nightwatch": "^1.0.8",
    "node-fetch": "^2.2.0",
    "now": "^12.1.0",
    "url-exists": "^1.0.3",
    "yaml-lint": "^1.2.4"
  },
  "workspaces": {
    "packages": [
      "docs-site",
      "packages/build-tools",
      "packages/build-tools/plugins/*",
      "packages/components/*",
      "packages/config-presets/*",
      "packages/core",
      "packages/twig-renderer",
      "packages/global"
    ]
  }
}
