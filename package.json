{
  "name": "bolt",
  "version": "0.1.0",
  "description": "Pega Digital Design System",
  "scripts": {
    "deploy:surge": "npm run build && surge sandbox/pattern-library/public $npm_package_config_surgeDomain",
    "build": "gulp patternlab:compile",
    "setup:homebrew": "sh scripts/install-homebrew.sh",
    "test:deploy": "sh scripts/deploy-test.sh && gulp toslack",
    "serve": "gulp serve",
    "init": "cd sandbox/pattern-library && composer install --no-interaction",
    "lint": "gulp lint",
    "fix": "gulp fix",
    "fix:scripts": "gulp scripts:fix",
    "fix:scss": "gulp styles:fix",
    "bootstrap": "lerna bootstrap",
    "commitmsg": "validate-commit-msg",
    "publish": "lerna publish",
    "prerelease": "lerna publish --canary",
    "publish-please": "publish-please",
    "prepublishOnly": "npm run snyk-protect",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "snyk-protect": "snyk protect"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "homepage": "https://github.com/pega-digital/bolt#readme",
  "dependencies": {
    "@bolt/build-styles": "^0.1.2",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "cz-conventional-changelog": "^2.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "fs": "0.0.1-security",
    "glob": "^7.1.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-data": "^1.2.1",
    "gulp-flatten": "^0.3.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-slack": "^0.1.2",
    "gulp-twig": "^0.7.0",
    "gulp-twig-php": "^0.2.1",
    "html-minifier": "^3.5.2",
    "husky": "^0.14.3",
    "import-postcss": "^8.0.2",
    "inquirer": "^3.2.0",
    "lerna": "^2.0.0",
    "merge": "^1.2.0",
    "minimatch": "^3.0.4",
    "node-sass": "^4.5.3",
    "node-slack": "0.0.7",
    "node-twig": "^1.1.0",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "postcss-cli": "^4.1.0",
    "postcss-smart-import": "^0.7.5",
    "pre-commit": "^1.2.2",
    "publish-please": "^2.3.1",
    "request": "^2.81.0",
    "sassdoc": "^2.3.0",
    "sassdoc-theme-default": "^2.6.1",
    "sassdoc-theme-herman": "^1.0.0-alpha.9",
    "semantic-release": "^6.3.6",
    "snyk": "^1.36.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.13.0",
    "stylelint-scss": "^1.5.1",
    "stylelint-selector-bem-pattern": "^1.1.0",
    "surge": "^0.18.0",
    "validate-commit-msg": "^2.12.2"
  },
  "pre-commit": [],
  "snyk": true
}
