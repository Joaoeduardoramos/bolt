{
  "name": "bolt",
  "version": "0.0.0-development",
  "private": true,
  "description": "Bolt Design System",
  "keywords": [
    "bolt",
    "bolt design system",
    "design system",
    "pattern lab",
    "web components"
  ],
  "homepage": "https://github.com/boltdesignsystem/bolt#readme",
  "bugs": {
    "url": "https://github.com/boltdesignsystem/bolt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boltdesignsystem/bolt.git"
  },
  "license": "MIT",
  "author": "Salem Ghoweri",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "lazysizes",
      "**/lazysizes",
      "get-own-property-symbols",
      "**/get-own-property-symbols"
    ]
  },
  "scripts": {
    "build": "cd packages/website && yarn build:prod",
    "cc": "yarn create:component",
    "clean": "npx npm-run-all --parallel clean:*",
    "clean:cache": "find . -name 'cache' -type d -exec rm -rf {} +",
    "clean:composer": "find . -name 'vendor' -type d -exec rm -rf {} +",
    "clean:empty": "find . -empty -type d -delete",
    "clean:npm": "find . -name 'node_modules' -type d -exec rm -rf {} +",
    "clean:www": "find . -name 'www' -type d -exec rm -rf {} +",
    "create:component": "yo ./packages/generators-yeoman/generators/component/index.js",
    "cz": "git-cz",
    "deploy": "./scripts/deploy.js",
    "fix": "yarn lint:js --fix; yarn lint:scss --fix",
    "postinstall": "npx lerna run postbootstrap",
    "jest": "jest --maxWorkers=3 --all --colors",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --max-warnings 0 'packages/**/*.js' 'packages/website/**/*.js'",
    "lint:scss": "stylelint 'packages/**/*.scss' 'packages/website/**/*.scss' --config .stylelintrc",
    "release": "node ./auto-release.js",
    "serve": "node packages/servers-default",
    "setup": "yarn && yarn run setup:php",
    "setup:full": "yarn --force && yarn run setup:php",
    "setup:php": "npx lerna exec --parallel --scope @bolt/twig-renderer --scope @bolt/drupal-twig-extensions --scope @bolt/core-php --scope @bolt/website -- composer install --prefer-dist",
    "setup:quick": "yarn && yarn run setup:php",
    "start": "cd packages/website && yarn run start",
    "test": "npm-run-all --parallel --aggregate-output test:js test:php test:monorepo test:build-tools",
    "test:build-tools": "cd packages/build-tools && yarn run test",
    "test:e2e:full": "./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.js --env chrome,firefox,ie11",
    "test:e2e:full-live": " NOW_URL=https://boltdesignsystem.com ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.js --env chrome,firefox,ie11",
    "test:e2e:full-local": "NOW_URL=http://localhost:3000 ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.local.js --env chrome,safari",
    "test:e2e:full-master": " NOW_URL=https://master.boltdesignsystem.com ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.js --env chrome,firefox,ie11",
    "test:e2e:quick": "./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.js --env chrome,ie11",
    "test:e2e:quick-live": " NOW_URL=https://boltdesignsystem.com ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.local.js",
    "test:e2e:quick-local": "NOW_URL=http://localhost:3000 ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.local.js",
    "test:e2e:quick-master": " NOW_URL=https://master.boltdesignsystem.com ./node_modules/.bin/nightwatch --config packages/testing-nightwatch/nightwatch.local.js",
    "pretest:js": "npm run setup:php",
    "test:js": "NODE_ENV='test' jest --all --colors 'packages|scripts' --passWithNoTests ",
    "test:js:quick": "NODE_ENV='test' jest --colors \"$(bolt-list-pkg-paths-changed)\" --passWithNoTests",
    "test:js:update": "yarn run test:js -u",
    "test:monorepo": "jest ./__tests__/monorepo -c jest.config.quick.js --noStackTrace",
    "test:php": "cd packages/twig-extensions-shared && composer run test",
    "test:pkgs": "lerna run test --ignore=@bolt/uikit-* --ignore=@bolt/build-tools--* --stream",
    "test:types": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git add packages/website/.cache --force && lint-staged",
      "pre-push": "jest ./__tests__/monorepo-basics.test.js -c jest.config.quick.js --noStackTrace",
      "commitmsg": "commitlint -E $GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --config .stylelintrc --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@instructure/cz-lerna-changelog"
    }
  },
  "browserslist": [
    "extends @bolt/browserslist-config"
  ],
  "dependencies": {
    "@auto-it/npm": "8.0.0",
    "@auto-it/omit-commits": "8.0.0",
    "@auto-it/released": "8.0.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@instructure/cz-lerna-changelog": "^6.16.0",
    "@slack/webhook": "^5.0.2",
    "auto": "8.0.0",
    "ci-utils": "^0.6.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.0",
    "postinstall-postinstall": "^2.0.0",
    "sort-package-json": "^1.31.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/skatejs": "^5.0.1",
    "stylelint": "^12.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
