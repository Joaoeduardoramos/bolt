{
  "name": "bolt",
  "version": "0.2.0",
  "description": "Pega Digital Design System",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run setup:composer && gulp build --production",
    "_changelog": "lerna-changelog",
    "commitmsg": "validate-commit-msg",
    "fix:scripts": "gulp scripts:fix",
    "fix:scss": "gulp styles:fix",
    "fix": "gulp fix",
    "_lint:fix": "eslint --fix ./packages/bolt-build-tools",
    "lint:js": "eslint ./packages/bolt-build-tools",
    "lint:md": "remark . --quiet --frail",
    "lint:scss": "gulp styles:lint",
    "clean:lerna": "lerna clean -Y",
    "clean:git": "git clean -xdf",
    "clean:all": "npm run clean:git && npm run clean:lerna",
    "lint": "npm-run-all --parallel lint:* -c",
    "mocha": "mocha packages/**/*/tests",
    "deploy": "node packages/bolt-build-tools/build-slack/index.js",
    "postinstall": "npm run bootstrap && npm run setup:composer && gem install --file packages/website-jekyll/Gemfile",
    "prepublishOnly": "npm run snyk-protect",
    "publish-beta": "lerna run build && lerna publish --npm-tag=beta --skip-git",
    "publish-canary": "lerna run build && lerna run publish-please && lerna publish --canary --yes",
    "publish-please": "publish-please",
    "publish": "lerna run build && lerna run publish-please && lerna publish",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "serve": "gulp serve",
    "setup:composer": "if [ ! -f ./bolt-website/pattern-lab/index.html ]; then cd packages/website/user/themes/bolt/pattern-lab && rm -rf composer.lock && rm -rf vendor && composer install --no-interaction --prefer-dist --no-dev; fi",
    "setup:homebrew": "sh scripts/install-homebrew.sh",
    "snyk-protect": "snyk protect",
    "_start": "serve ./boltdesignsystem --single",
    "start": "webpack-dev-server --env.dev --env.element=bolt-components --hot",
    "test": "npm run mocha",
    "pretest": "npm run lint && node scripts/check-imports.js",
    "toolbelt:generate:configs": "node toolbelt/generate-configs.js",
    "toolbelt:packagelist": "node toolbelt/generate-packages-list.js",
    "cleanup": "rimraf dist packages/**/dist definitions packages/**/definitions tmp ts-output"
  },
  "pre-commit": [
    "test",
    "lint:scss",
    "build"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "homepage": "https://github.com/pega-digital/bolt#readme",
  "dependencies": {
    "@skatejs/ssr": "^0.12.2",
    "@types/expect": "1.20.0",
    "@types/mocha": "2.2.39",
    "@types/node": "7.0.5",
    "@types/sinon-chai": "2.7.27",
    "awesome-typescript-loader": "3.1.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-traverse": "^6.24.1",
    "babel-types": "^6.24.1",
    "babylon": "^6.16.1",
    "bore": "2.0.1",
    "browser-sync": "^2.18.13",
    "chai": "^4.1.0",
    "chai-fs": "^1.0.0",
    "commitizen": "2.9.6",
    "concurrently": "3.4.0",
    "core-js": "2.4.1",
    "css-loader": "0.26.2",
    "cz-conventional-changelog": "^2.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "date-fns": "1.28.1",
    "decko": "1.2.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "expect": "1.20.2",
    "favicons-webpack-plugin": "0.0.7",
    "feature-toggle": "^0.3.0",
    "file-loader": "0.10.1",
    "fs-extra": "^4.0.1",
    "glob": "^7.1.2",
    "globby": "^6.1.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "html-loader": "0.4.5",
    "html-webpack-plugin": "2.28.0",
    "husky": "^0.14.3",
    "inquirer": "^3.2.0",
    "js-yaml": "^3.9.1",
    "lerna": "^2.1.2",
    "lerna-changelog": "0.6.0",
    "lerna-semantic-release": "^9.1.0",
    "lodash.capitalize": "4.2.1",
    "markdown-loader": "2.0.0",
    "mocha": "^3.4.2",
    "node-sass": "4.5.0",
    "nodemon": "^1.11.0",
    "now-travis": "^1.0.1",
    "npm-run-all": "^4.0.2",
    "npm-sass": "^2.2.1",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "precommit": "^1.2.2",
    "prettier-eslint-cli": "^4.2.1",
    "publish-please": "^2.3.1",
    "pushstate-server": "3.0.0",
    "read-pkg-up": "^2.0.0",
    "remark-cli": "4.0.0",
    "remark-lint": "6.0.1",
    "remark-preset-lint-consistent": "2.0.1",
    "remark-preset-lint-markdown-style-guide": "2.1.1",
    "remark-preset-lint-recommended": "3.0.1",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.3",
    "sass-toolkit": "^2.10.2",
    "serve": "latest",
    "skatejs": "4.6.7",
    "skatejs-web-components": "5.2.1",
    "snyk": "^1.36.2",
    "style-loader": "0.13.2",
    "stylefmt": "6.0.0",
    "stylelint": "8.0.0",
    "stylelint-scss": "^2.0.1",
    "to-string-loader": "1.1.5",
    "tslib": "1.6.0",
    "tslint": "4.5.1",
    "tslint-react": "2.4.0",
    "typescript": "2.2.1",
    "typescript-formatter": "5.1.1",
    "url-loader": "0.5.8",
    "validate-commit-msg": "^2.12.2",
    "wct-browserstack": "^0.2.1",
    "web-component-tester": "5.0.1",
    "web-component-tester-custom-runner": "^6.1.1",
    "webpack": "2.2.1",
    "webpack-config-utils": "2.3.0",
    "webpack-dev-server": "2.4.1",
    "webpack-merge": "4.0.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "snyk": true,
  "lint-staged": {
    "*.md": [
      "remark --quiet --frail --no-stdout"
    ],
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "now": {
    "files": [
      "bolt-website",
      "bolt-website/pattern-lab/styleguide/bower_components/**/*"
    ]
  },
  "packages": [
    "band"
  ]
}
