<script>
  // Durations Demo
  document.querySelector('#durations-demo-trigger').addEventListener('click', function() {
    document.querySelectorAll('#durations-demo .demo-animated-bar').forEach(function(el) {el.setAttribute('data-anim-triggered', 'yes')});
    setTimeout(function() {
      document.querySelectorAll('#durations-demo .demo-animated-bar').forEach(function(el) {el.setAttribute('data-anim-triggered', 'no')});
