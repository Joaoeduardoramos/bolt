<div style="max-width: 400px; padding: 40px">
  <h2>Durations</h2>
  <div id="durations-demo">
    <div class="demo-animated-slider demo-animated-slider--duration-xfast"><strong>Extra Fast</strong> (Hover to see effect)</div>
    <div class="demo-animated-slider demo-animated-slider--duration-fast"><strong>Fast</strong> (Hover to see effect)</div>
    <div class="demo-animated-slider demo-animated-slider--duration-medium"><strong>Medium</strong> (Hover to see effect)</div>
    <div class="demo-animated-slider demo-animated-slider--duration-slow"><strong>Slow</strong> (Hover to see effect)</div>
    <div class="demo-animated-slider demo-animated-slider--duration-xslow"><strong>Extra Slow</strong> (Hover to see effect)</div>
  </div>
  <button id="durations-demo-trigger">Click Me</button>
  <script>
    document.querySelector('#durations-demo-trigger').addEventListener('click', function() {
      document.querySelectorAll('#durations-demo .demo-animated-slider').forEach(function(el) {el.setAttribute('data-anim-triggered', 'yes')});
      setTimeout(function() {
        document.querySelectorAll('#durations-demo .demo-animated-slider').forEach(function(el) {el.setAttribute('data-anim-triggered', 'no')});
      }, 2000);
    });
  </script>

