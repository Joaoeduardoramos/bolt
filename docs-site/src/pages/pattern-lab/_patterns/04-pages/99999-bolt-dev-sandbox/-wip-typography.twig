{% set text_band_content_top %}
  {% grid "o-bolt-grid--flex" %}
    {% cell "u-bolt-width-1/1 u-bolt-width-7/12@small" %}
      {# This is a standard teaser #}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxxlarge",
        text: "No transformation too big. No journey too small.",
      } only %}
      {% include "@bolt-components-headline/subheadline.twig" with {
        size: "xlarge",
        text: "Software built for automating anything. (Really.)",
      } only %}
      {% include "@bolt-components-button/button.twig" with {
        text: "Meet Pega",
      } only %}
    {% endcell %}
  {% endgrid %}
{% endset %}
{% set text_band_content_bottom %}
  {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-4/12@medium" %}
      {% include "@bolt-components-card-replacement/card-replacement.twig" with {
        link: {
          url: "https://pega.com",
          text: "Go to pega.com"
        },
        body: {
          eyebrow: "CUSTOMER ENGAGEMENT",
          headline: "Maximize value at every interaction.",
        },
      } only %}
    {% endcell %}
    {% cell "u-bolt-width-12/12 u-bolt-width-4/12@medium" %}
      {% include "@bolt-components-card-replacement/card-replacement.twig" with {
        link: {
          url: "https://pega.com",
          text: "Go to pega.com"
        },
        body: {
          eyebrow: "CUSTOMER SERVICE",
          headline: "Get proactive & preemptive.",
        },
      } only %}
    {% endcell %}
    {% cell "u-bolt-width-12/12 u-bolt-width-4/12@medium" %}
      {% include "@bolt-components-card-replacement/card-replacement.twig" with {
        link: {
          url: "https://pega.com",
          text: "Go to pega.com"
        },
        body: {
          eyebrow: "INTELLIGENT AUTOMATION",
          headline: "Cut costs. Crush complexity.",
        },
      } only %}
    {% endcell %}
  {% endgrid %}
{% endset %}
{% set flag_band_content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-12/12@only-small u-bolt-flex-grow" %}
      {% include "@bolt-components-headline/eyebrow.twig" with {
        text: "Who is Pega?",
      } only %}
      {% include "@bolt-components-headline/text.twig" with {
        text: "We're the leader in software for 1:1 customer engagement, customer service, and intelligent automation.",
      } only %}
    {% endcell %}
    {% cell "u-bolt-width-12/12@only-small" %}
      {% include "@bolt-components-button/button.twig" with {
        size: "small",
        style: "secondary",
        text: "About Us",
      } only %}
    {% endcell %}
  {% endgrid %}
{% endset %}
{% set text_band_content %}
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    size: "medium",
    content: text_band_content_top,
  } only %}
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    size: "none",
    content: text_band_content_bottom,
  } only %}
{% endset %}
{% set hero_band_content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--right" %}
    <div class="o-bolt-grid__cell u-bolt-flex-shrink u-bolt-position-absolute u-bolt-padding-bottom-none" style="bottom: 0;">
      {% include "@bolt-components-image/image.twig" with {
        src: "/images/placeholders/oliver-silouette.png",
        alt: "Oliver",
        max_width: "320px",
      } only %}
    </div>
  {% endgrid %}
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    size: "medium",
    content: text_band_content,
  } only %}
  <hr class="u-bolt-margin-none">
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    size: "xsmall",
    content: flag_band_content,
    background: {
      opacity: "medium",
      fill: "color",
    }
  } only %}
{% endset %}
