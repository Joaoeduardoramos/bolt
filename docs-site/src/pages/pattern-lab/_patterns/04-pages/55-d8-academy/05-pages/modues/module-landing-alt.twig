{% extends "@academy/default-page-template.twig" %}

{% block main_content %}
  {# Toolbar #}
  {% set icon %}
    {% include "@bolt-components-icon/icon.twig" with {
      name: "launchpad",
      size: "medium",
    } only %}
  {% endset %}
  {% set crumb_1 %}
    {% include "@bolt-components-link/link.twig" with {
      text: "Mission Title",
      url: "#!",
    } only %}
  {% endset %}
  {% set breadcrumb %}
    {% include "@bolt-components-breadcrumb/breadcrumb.twig" with {
      contentItems: [
        crumb_1,
        "System Architect Essentials"
      ]
    } only %}
  {% endset %}
  {% set title %}
    {% include "@bolt-components-list/list.twig" with {
      display: "inline",
      items: [
        icon,
        breadcrumb,
      ]
    } only %}
  {% endset %}
  {% set tool_1 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Share",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "share",
      }
    } only %}
  {% endset %}
  {% set tool_2 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Star",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "star-solid",
      }
    } only %}
  {% endset %}
  {% set tool_3 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Add",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "add-open",
      }
    } only %}
  {% endset %}
  {% set tools %}
    {% include "@bolt-components-list/list.twig" with {
      display: "inline",
      items: [
        tool_1,
        tool_2,
        tool_3,
      ]
    } only %}
  {% endset %}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}
      {% cell "u-bolt-flex-grow" %}
        {{ title }}
      {% endcell %}
      {% cell "u-bolt-flex-shrink" %}
        {{ tools }}
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "xdark",
    size: "xsmall",
    content: content,
  } only %}
  {# End Toolbar #}

  {# Hero #}
  {% set chip_1 %}
    {% include "@bolt-components-chip/chip.twig" with {
      text: "Chip 1",
      url: "#!",
      size: "small",
    } only %}
  {% endset %}
  {% set chip_2 %}
    {% include "@bolt-components-chip/chip.twig" with {
      text: "Chip 2 Mauris Iaculis Porttitor Posuere. Praesent Id",
      url: "#!",
      size: "small",
    } only %}
  {% endset %}
  {% set badge %}
    {% include "@bolt-components-icon/icon.twig" with {
      name: "launchpad",
      background: "circle",
      size: "xlarge"
    } only %}
  {% endset %}
  {% set title %}
    {% include "@bolt-components-headline/text.twig" with {
      size: "small",
      weight: "semibold",
      text: "Achievement <br>Badge Awarded",
    } only %}
  {% endset %}
  {% set topic %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-flex-grow" %}
        {% include "@bolt-components-link/link.twig" with {
          text: "Topic Title",
          url: "#!",
        } only %}
      {% endcell %}
      {% cell "u-bolt-flex-shrink" %}
        10 mins
      {% endcell %}
    {% endgrid %}
  {% endset %}
  {% set topic_visited %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-flex-grow" %}
        {% include "@bolt-components-link/link.twig" with {
          text: "Topic Title",
          url: "#!",
        } only %}
      {% endcell %}
      {% cell "u-bolt-flex-shrink" %}
        <div class="u-bolt-color-gray">
          10 mins
          {% include "@bolt-components-icon/icon.twig" with {
            name: "eye",
            size: "medium",
          } only %}
        </div>
      {% endcell %}
    {% endgrid %}
  {% endset %}
  {% set quiz %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-flex-grow" %}
        {% include "@bolt-components-link/link.twig" with {
          text: "Quiz Title",
          url: "#!",
          icon: {
            name: "asset-text",
            position: "before",
          }
        } only %}
      {% endcell %}
      {% cell "u-bolt-flex-shrink" %}
        20 questions
      {% endcell %}
    {% endgrid %}
  {% endset %}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-1/1" %}
        {% include "@bolt-components-headline/eyebrow.twig" with {
          text: "Module",
        } only %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "xxxlarge",
          text: "System Architect Essentials",
        } only %}
        {% include "@bolt-components-headline/subheadline.twig" with {
          size: "xxlarge",
          text: "Application Build",
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        {% include "@bolt-components-list/list.twig" with {
          display: "inline",
          separator: "solid",
          items: [
            "14 user scenarios",
            "2 hrs",
          ]
        } only %}
        {% include "@bolt-components-list/list.twig" with {
          display: "inline",
          items: [
            chip_1,
            chip_2,
          ]
        } only %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-6/12@small" %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "large",
          text: "Scenario",
        } only %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris. Vivamus hendrerit arcu sed erat molestie vehicula. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim. Phasellus molestie magna non est bibendum non venenatis nisl tempor.",
        } only %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "large",
          text: "Assignment Objectives",
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        {% include "@bolt-components-ul/ul.twig" with {
          items: [
            "Item 1",
            "Item 2",
            "Item 3",
            "Item 4",
            "Item 5",
          ]
        } only %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "large",
          text: "Build Credentials",
        } only %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Sed molestie augue sit amet leo consequat posuere. Vestibulum ante ipsum primis in.",
        } only %}
        {% include "@bolt-components-table/table.twig" with {
          borderless: true,
          headers: {
            top: {
              cells: [
                "Role",
                "Operator ID",
                "Password",
              ]
            },
          },
          rows: [
            {
              cells: [
                "System Architect",
                "author@tourist.com",
                "rules",
              ]
            },
          ],
          attributes: {
            class: "t-bolt-xlight",
          }
        } only %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-6/12@small" %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "xsmall",
          align: "center",
          text: "You will be completing this assignment in your own Pega cloud environment.",
          icon: {
            name: "cloud",
            position: "before",
          },
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        <div class="t-bolt-xlight u-bolt-shadow-20 u-bolt-border-radius-large u-bolt-padding-medium">
          {% include "@bolt-components-headline/headline.twig" with {
            size: "xlarge",
            text: "Topics",
            attributes: {
              class: "u-bolt-margin-bottom-small",
            }
          } only %}
          {% include "@bolt-components-ol/ol.twig" with {
            items: [
              topic_visited,
              topic_visited,
              topic,
              topic,
              topic,
              quiz,
            ]
          } only %}
        </div>
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "xdark",
    content: content,
    background: {
      opacity: "light",
      fill: "gradient",
      contentItems: [
        {
          pattern: "image",
          src: "/images/content/backgrounds/background-night-sky.jpg",
        },
      ]
    },
  } only %}
  {# End Hero #}
{% endblock %}
