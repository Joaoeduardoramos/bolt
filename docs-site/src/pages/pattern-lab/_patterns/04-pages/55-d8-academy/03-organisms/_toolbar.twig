{% embed "@bolt-components-toolbar/toolbar.twig" with {
  size: "xsmall",
  theme: "none",
  title: {
    tag: "h2",
    icon: {
      name: toolbarIcon
    }
  },
} %}
  {% if breadcrumbs %}
    {% block content_before %}
      {% include "@bolt-components-breadcrumb/breadcrumb.twig" with {
        "contentItems": breadcrumbs | map(breadcrumb => breadcrumb.text and breadcrumb.url ? include("@bolt-components-link/link.twig", {
          text: breadcrumb.text,
          url: breadcrumb.url,
          isHeadline: true
        }, with_context = false) : (breadcrumb.text ?
          include("@bolt-components-headline/text.twig", {
            text: breadcrumb.text,
            size: "small",
            weight: "bold",
            tag: "span",
            attributes: {
              class: [
                "u-bolt-inline"
              ]
            }
          }, with_context = false) : breadcrumb))
      } only %}
    {% endblock %}
  {% endif %}

  {% block content_after %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--xsmall o-bolt-grid--right" %}
      {% cell %}
        <progress max="100" value="80">80%</progress>
      {% endcell %}

      {% cell %}
        {% include "@bolt-components-list/list.twig" with {
          display: "flex",
          align: "end",
          spacing: "xsmall",
          items: [
            include("@bolt-components-button/button.twig", {
              text: "Share",
              size: "small",
              style: "secondary",
              iconOnly: true,
              icon: {
                name: "share",
              }
            }),
            include("@bolt-components-button/button.twig", {
              text: "Star",
              size: "small",
              style: "secondary",
              iconOnly: true,
              icon: {
                name: "star-solid",
              }
            }),
            include("@bolt-components-button/button.twig", {
              text: "Add",
              size: "small",
              style: "secondary",
              iconOnly: true,
              icon: {
                name: "add-open",
              }
            })
          ]
        } only %}
      {% endcell %}
    {% endgrid %}
  {% endblock %}
{% endembed %}


{# End Toolbar #}