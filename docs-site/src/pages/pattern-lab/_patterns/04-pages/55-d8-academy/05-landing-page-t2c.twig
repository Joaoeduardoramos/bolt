{% extends "@pl/_default-page-template.twig" %}

{% block global_header %}
  {% include "@bolt/page-header.twig" %}
{% endblock %}


{% block main_content %}
  {# Toolbar #}
  {% set icon %}
    {% include "@bolt-components-icon/icon.twig" with {
      name: "launchpad",
      size: "medium",
    } only %}
  {% endset %}
  {% set crumb_1 %}
    {% include "@bolt-components-link/link.twig" with {
      text: "Mission Title",
      url: "#!",
    } only %}
  {% endset %}
  {% set breadcrumb %}
    {% include "@bolt-components-breadcrumb/breadcrumb.twig" with {
      contentItems: [
        crumb_1,
        "Internal Pega Test"
      ]
    } only %}
  {% endset %}
  {% set title %}
    {% include "@bolt-components-list/list.twig" with {
      display: "inline",
      items: [
        icon,
        breadcrumb,
      ]
    } only %}
  {% endset %}
  {% set tool_1 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Share",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "share",
      }
    } only %}
  {% endset %}
  {% set tool_2 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Star",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "star-solid",
      }
    } only %}
  {% endset %}
  {% set tool_3 %}
    {% include "@bolt-components-button/button.twig" with {
      text: "Add",
      size: "small",
      style: "secondary",
      border_radius: "full",
      iconOnly: true,
      icon: {
        name: "add-open",
      }
    } only %}
  {% endset %}
  {% set tools %}
    {% include "@bolt-components-list/list.twig" with {
      display: "inline",
      items: [
        tool_1,
        tool_2,
        tool_3,
      ]
    } only %}
  {% endset %}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}
      {% cell "u-bolt-flex-grow" %}
        {{ title }}
      {% endcell %}
      {% cell "u-bolt-flex-shrink" %}
        {{ tools }}
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "xdark",
    size: "xsmall",
    content: content,
  } only %}
  {# End Toolbar #}

  {# Hero #}
  {% set chip_1 %}
    {% include "@bolt-components-chip/chip.twig" with {
      text: "Chip 1",
      url: "#!",
      size: "small",
    } only %}
  {% endset %}
  {% set chip_2 %}
    {% include "@bolt-components-chip/chip.twig" with {
      text: "Chip 2 Mauris Iaculis Porttitor Posuere. Praesent Id",
      url: "#!",
      size: "small",
    } only %}
  {% endset %}
  {% set badge %}
    {% include "@bolt-components-icon/icon.twig" with {
      name: "launchpad",
      background: "circle",
      size: "xlarge"
    } only %}
  {% endset %}
  {% set title %}
    {% include "@bolt-components-headline/text.twig" with {
      size: "small",
      weight: "semibold",
      text: "Achievement <br>Badge Awarded",
    } only %}
  {% endset %}
  {% set figure_icon %}
    {% include "@bolt-components-icon/icon.twig" with {
      name: "launchpad",
      size: "xlarge",
      background: "circle",
      color: "teal"
    } only %}
  {% endset %}
  {% set prereq %}
    {% include "@bolt/flag.twig" with {
      valign: "middle",
      url: "#!",
      figure: {
        content: figure_icon
      },
      items: [
        {
          pattern: "headline",
          size: "large",
          text: "Mission Title",
          url: "https://www.pega.com",
          icon: {
            name: "chevron-right"
          }
        }
      ]
    } only %}
  {% endset %}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-1/1" %}
        {% include "@bolt-components-headline/eyebrow.twig" with {
          text: "Module",
        } only %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "xxxlarge",
          text: "Internal Pega Test",
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        {% include "@bolt-components-list/list.twig" with {
          display: "inline",
          separator: "solid",
          items: [
            "60 Questions",
            "90 mins",
            "Passing Score Needed: 70%",
          ]
        } only %}
        {% include "@bolt-components-list/list.twig" with {
          display: "inline",
          items: [
            chip_1,
            chip_2,
          ]
        } only %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-5/12@small" %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris. Vivamus hendrerit arcu sed erat molestie vehicula. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim. Phasellus molestie magna non est bibendum non venenatis nisl tempor.",
        } only %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-4/12@small" %}
        {% include "@bolt-components-headline/headline.twig" with {
          text: "Prerequisites",
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        {% include "@bolt-components-list/list.twig" with {
          separator: "solid",
          items: [
            prereq,
            prereq,
            prereq,
          ]
        } only %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-3/12@small" %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "large",
          text: "Exam Topics <small>(% of exam)</small>",
          attributes: {
            class: "u-bolt-margin-bottom-small",
          }
        } only %}
        {% include "@bolt-components-ul/ul.twig" with {
          items: [
            "Pega Platform (8%)",
            "Case Lifecycle (25%)",
            "Case Data Modeling (17%)",
            "Business Policy Automation (13%)",
          ]
        } only %}
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "xdark",
    content: content,
    background: {
      opacity: "light",
      fill: "gradient",
    },
  } only %}
  {# End Hero #}

  {# Body #}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-1/1 u-bolt-width-10/12@small u-bolt-width-8/12@medium" %}
        <div class="t-bolt-xlight u-bolt-padding-medium u-bolt-border-radius-large u-bolt-shadow-level-30">
          {% include "@bolt-components-headline/headline.twig" with {
            tag: "h2",
            size: "large",
            text: "Before you begin...",
          } only %}
          {% include "@bolt-components-headline/text.twig" with {
            text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris. Vivamus hendrerit arcu sed erat molestie vehicula. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim. Phasellus molestie magna non est bibendum non venenatis nisl tempor.",
          } only %}
          {% include "@bolt-components-placeholder/placeholder.twig" with {
            size: "large",
            text: "H5P Embed",
          } only %}
        </div>
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "light",
    content: content,
  } only %}
  {# End Body #}
{% endblock %}
