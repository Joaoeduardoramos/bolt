{% set schema = bolt.data.components['@bolt-components-text'].schema %}

{% for fontSize in schema.properties["font-size"].enum %}
  {% for fontWeight in schema.properties["font-weight"].enum %}

    <bolt-text font-weight="{{ fontWeight }}" font-size="{{ fontSize }}">
      This is {{ fontWeight }} {{fontSize}} text
    </bolt-text>

  {% endfor %}
{% endfor %}
