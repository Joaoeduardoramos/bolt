{% set band_content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-1/1 u-bolt-width-1/2@small u-bolt-flex-grow" %}
      {% grid %}
        {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small" %}
          {% if eyebrow %}
            {% include "@bolt-components-headline/eyebrow.twig" with eyebrow only %}
          {% endif %}

          {% if headline %}
            {% include "@bolt-components-headline/headline.twig" with headline only %}
          {% endif %}

          {{ content }}
        {% endcell %}
      {% endgrid %}
    {% endcell %}

    {% if buttons %}
      {% cell "u-bolt-width-1/1@only-small" %}
        {{ include("@bolt-components-button-group/button-group.twig", { buttons: buttons }, with_context = false) }}
      {% endcell %}
    {% endif %}
  {% endgrid %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  content: band_content,
} only %}
