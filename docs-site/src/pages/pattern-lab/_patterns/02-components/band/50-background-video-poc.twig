{% set formInputs %}
  {% grid 'o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--small o-bolt-grid--center o-bolt-grid--middle' %}
    {% cell 'o-bolt-grid__cell--top c-reorderable-form-field c-reorderable-form-field--first u-bolt-width-1/1 u-bolt-width-2/3@small u-bolt-flex-grow' %}
        {% include "@pl/10-form-element-demo-input-element.twig" with {
        "title": "Search All Jobs",
        "inputAttributes": {
          "placeholder": "Search All Jobs",
          "required": false,
          "type": "search"
        },
        "labelDisplayType": "floating"
      } only %}
    {% endcell %}

    {% cell 'o-bolt-grid__cell--top c-reorderable-form-field c-reorderable-form-field--third u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% include "@pl/40-form-element-demo-select.twig" with {
          "title": "Country",
          "selectAttributes": {
            "required": false
          },
          "options": [
            {
              "type": "option",
              "value": "",
              "label": "- Select a Country -"
            },
            {
              "type": "option",
              "value": "a",
              "label": "Argentina"
            },
            {
              "type": "option",
              "value": "b",
              "label": "Belgium"
            },
            {
              "type": "option",
              "value": "c",
              "label": "Croatia"
            }
          ]
        } only %}
    {% endcell %}

    {% cell 'o-bolt-grid__cell--top c-reorderable-form-field c-reorderable-form-field--fourth u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% include "@pl/40-form-element-demo-select.twig" with {
        "title": "Categories",
        "selectAttributes": {
          "required": false
        },
        "options": [
          {
            "type": "option",
            "value": "",
            "label": "- Select a Category -"
          },
          {
            "type": "option",
            "value": "sales",
            "label": "Sales"
          }
        ]
      } only %}
    {% endcell %}

    {% cell 'o-bolt-grid__cell--top u-bolt-flex-grow u-bolt-flex-shrink c-reorderable-form-field c-reorderable-form-field--fifth c-reorderable-form-field--second@small' %}
      {% include "@bolt/form-button.twig" with {
        "text": "Search",
        "width": "full",
      } only %}
    {% endcell %}
  {% endgrid %}
{% endset %}

{% set form %}
  {% include "@bolt/form.twig" with {
    children: formInputs
  } only %}
{% endset %}

{% set form_card %}
  {% embed "@bolt-components-card/card.twig" with {
    theme: "xlight",
  } %}
    {% block card_body %}
      {{ form }}
    {% endblock %}

    {% block card_footer %}{% endblock %}
  {% endembed %}
{% endset %}

{% set band_bg %}
  <div class="c-background-video">
    <div class="c-background-video__inner">
      {% include "@bolt/video.twig" with {
        "videoId": "5780495299001",
        "accountId": "1900410236",
        "playerId": "r1CAdLzTW",
        "autoplay": true,
        "loop": true,
        "controls": false
      } only %}
    </div>
  </div>
{% endset %}

