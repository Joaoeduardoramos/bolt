{% set modal_spacing_medium %}
  <bolt-modal width="auto" spacing="medium">
    <bolt-button slot="trigger" onclick="this.closest('bolt-modal').show()">Open Modal (medium spacing)</bolt-button>

    <bolt-text headline>Medium Spacing</bolt-text>
    <bolt-text>This modal has medium spacing all around.</bolt-text>
  </bolt-modal>
{% endset %}
{% set modal_spacing_large %}
  <bolt-modal width="auto" spacing="large">
    <bolt-button slot="trigger" onclick="this.closest('bolt-modal').show()">Open Modal (large spacing)</bolt-button>

    <bolt-text headline>Large Spacing</bolt-text>
    <bolt-text>This modal has large spacing all around.</bolt-text>
  </bolt-modal>
{% endset %}
{% set modal_spacing_none %}
  <bolt-modal width="optimal" spacing="none" theme="none">
    <bolt-button slot="trigger" onclick="this.closest('bolt-modal').show()">Open Modal (no spacing)</bolt-button>

    {% include "@bolt-components-image/image.twig" with {
      src: "/images/placeholders/tout-4x3-climber.jpg",
      alt: "A Rock Climber",
      lazyload: false,
    } only %}
  </bolt-modal>
{% endset %}

{% include "@bolt-components-list/list.twig" with {
  display: "inline",
  spacing: "medium",
  items: [
    modal_spacing_medium,
    modal_spacing_large,
    modal_spacing_none,
  ]
} only %}
