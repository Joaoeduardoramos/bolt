<bolt-modal persistent>
  <bolt-button slot="trigger" onclick="this.closest('bolt-modal').show()">Open Modal</bolt-button>

  <bolt-text headline>Use Google's location service?</bolt-text>
  <bolt-text>Let Google help apps determine location. This means sending anonymous location data to Google, even when no apps are running.</bolt-text>

  <bolt-button onclick="this.closest('bolt-modal').hide()">Close Modal</bolt-button>
</bolt-modal>
