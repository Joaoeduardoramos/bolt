{% set image_content %}
  <bolt-button color="text" size="xsmall" onclick="this.closest('bolt-modal').hide()">
    <bolt-image src="/images/content/backgrounds/background-robotics-customer-service.jpg" alt="This is an image" style="margin: -0.206rem -0.5rem; cursor: zoom-out"></bolt-image>
  </bolt-button>
{% endset %}

<div class="u-bolt-margin-bottom-medium">
  <h3>Button Trigger</h3>
  {% include "@bolt-components-button/button.twig" with {
    text: "Open Modal",
    size: "small",
    attributes: {
      onclick: "this.nextElementSibling.show()",
    }
  } only %}
  {% include "@bolt-components-modal/modal.twig" with {
    content: image_content,
    spacing: "none",
    theme: "none",
    scroll: "overall",
    hide_close_button: true,
  } only %}
</div>

<div class="u-bolt-margin-bottom-medium">
  <h3>Image Trigger (experimental)</h3>
  <p><mark>Warning: this is experimental and should not be replicated on production sites.</mark></p>
  <bolt-button color="text" size="xsmall" onclick="this.nextElementSibling.show()">
    <bolt-image src="/images/content/backgrounds/background-robotics-customer-service.jpg" alt="This is an image" ratio="none" style="margin: -0.206rem -0.5rem; max-width: 200px; cursor: zoom-in;"></bolt-image>
  </bolt-button>
  {% include "@bolt-components-modal/modal.twig" with {
    content: image_content,
    spacing: "none",
    theme: "none",
    scroll: "overall",
    hide_close_button: true,
  } only %}
</div>

<div class="u-bolt-margin-bottom-medium">
  <h3>Timed Trigger</h3>
  {% include "@bolt-components-button/button.twig" with {
    text: "Trigger Timed Modal",
    size: "small",
    attributes: {
      onclick: "setTimedModalParam(true)",
    }
  } only %}
  {% include "@bolt-components-button/button.twig" with {
    text: "Unset Timed Modal",
    size: "small",
    attributes: {
      onclick: "setTimedModalParam(false)",
    }
  } only %}
  {% set timed_modal_content %}
    <h2 slot="header">Timed Modal</h2>
    <p>This modal will open after 3 seconds.</p>
  {% endset %}
  {% include "@bolt-components-modal/modal.twig" with {
    attributes: {
      id: 'timed-modal'
    },
    content: timed_modal_content,
  } only %}
  {% include "includes/_modal-trigger-script.twig" %}
</div>
