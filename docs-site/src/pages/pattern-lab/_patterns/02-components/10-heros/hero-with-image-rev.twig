{% set content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--rev o-bolt-grid--large u-bolt-overflow-hidden" %}
    {% cell "u-bolt-width-1/1 u-bolt-width-7/12@medium u-bolt-width-1/2@large u-bolt-padding-top-large u-bolt-padding-bottom-large" %}
      {# This is a standard teaser #}
      {# {% include "@bolt-components-headline/eyebrow.twig" with {
        text: "This Is an Eyebrow",
      } only %} #}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxxlarge",
        text: "It's show time.",
      } only %}
      {% include "@bolt-components-headline/subheadline.twig" with {
        size: "xlarge",
        text: "Please join us for PegaWorld 2019 event at MGM Grand in Las&nbsp;Vegas",
        attributes: {
          class: [
            "u-bolt-line-length-medium"
          ]
        }
      } only %}
      {% include "@bolt-components-headline/text.twig" with {
        text: "Monday, June 3rd, 2019 <br>10AM - 3PM EST",
        weight: "bold",
      } only %}
      {% include "@bolt-components-button/button.twig" with {
        text: "Watch livestream",
        style: "secondary"
      } only %}
    {% endcell %}

    {% cell "o-bolt-grid__cell--bottom u-bolt-width-1/1 u-bolt-width-5/12@medium u-bolt-width-1/2@large u-bolt-padding-top-medium@medium" %}
      {% include "@bolt-components-image/image.twig" with {
        src: "/images/heros/hero-foreground-yellow.png",
        max_width: "375px",
        attributes: {
          class: [
            "u-bolt-margin-right-auto@medium",
            "u-bolt-margin-left-none@medium",
            "u-bolt-margin-left-auto",
            "u-bolt-negative-margin-bottom-large",
            "u-bolt-negative-margin-top-large@xsmall",
            "u-bolt-negative-margin-top-xxlarge@small",
            "u-bolt-margin-top-none@medium",
            "u-bolt-flip-x@medium",
          ],
        }
      } only %}
    {% endcell %}
  {% endgrid %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  theme: "light",
  content: content,
  size: "none",
  background: {
    overlay: "disabled",
    contentItems: [
      {
        pattern: "image",
        lazyload: false,
        src: "/images/heros/hero-background-yellow.svg",
      },
    ]
  }
} only %}
