  attributes: {
    class: [
      "js-animated-progress-bar"
    ]
  }
} only %}


<script>
  window.addEventListener('load', function() {
    var progressBar = document.querySelector('.js-animated-progress-bar');

    var myVar = setInterval(myTimer, 250);

    function myTimer() {
      progressBar.value += 1;

      if (progressBar.value >= progressBar.max){
        clearInterval(myVar);
        progressBar.animated = false;
      }
    }
  });
</script>