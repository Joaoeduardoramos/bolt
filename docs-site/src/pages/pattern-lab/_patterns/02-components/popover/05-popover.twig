{# Setting variables for demo purposes #}
{% set trigger %}
  {% include "@bolt-components-button/button.twig" with {
    size: "xsmall",
    iconOnly: true,
    text: "Trigger",
    icon: {
      name: "more",
      position: "after",
    },
  } only %}
{% endset %}
{% set content %}
  <bolt-text headline font-size="small">Content</bolt-text>
  <bolt-text font-size="xsmall">This is the content of the popover. <bolt-link url="https://pega.com">call to action</bolt-link></bolt-text>
{% endset %}

{% set popovers_top %}
  <bolt-list display="inline" spacing="xlarge" align="center">
    <bolt-list-item>
      {# Start component specific code #}
      {% include "@bolt-components-popover/popover.twig" with {
        trigger: trigger,
        content: content,
        placement: "bottom-start"
      } only %}
    </bolt-list-item>
    <bolt-list-item>
      {# Start component specific code #}
      {% include "@bolt-components-popover/popover.twig" with {
        trigger: trigger,
        content: content,
        placement: "bottom"
      } only %}
    </bolt-list-item>
    <bolt-list-item>
      {# Start component specific code #}
      {% include "@bolt-components-popover/popover.twig" with {
        trigger: trigger,
        content: content,
        placement: "bottom-end"
      } only %}
    </bolt-list-item>
  </bolt-list>
{% endset %}
{% set popovers_right %}
  <bolt-list spacing="medium">
    <bolt-list-item>
      <div class="u-bolt-text-align-right">
        {# Start component specific code #}
        {% include "@bolt-components-popover/popover.twig" with {
