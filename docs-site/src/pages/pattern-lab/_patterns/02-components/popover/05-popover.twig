<bolt-text headline>
  Preferred placement
</bolt-text>
<div class="u-bolt-margin-bottom-large">
  {% include "@bolt-components-grid/grid.twig" with {
    gutter: "small",
    items: [
      {
        column_start: "1",
        column_span: "12",
        row_start: "1",
        content: popovers_top,
      },
      {
        column_start: "12",
        column_span: "1",
        row_start: "2",
        content: popovers_right,
      },
      {
        column_start: "1",
