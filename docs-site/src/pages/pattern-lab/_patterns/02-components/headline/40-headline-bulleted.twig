  size: "xxlarge",
  text: "bulletSize (fixed vs auto)",
  tag: "h3",
} only %}

{% for size in schema.properties.size.enum %}
  {% include "@bolt-components-headline/text.twig" with {
    size: size,
    weight: "bold",
    text: "Fixed-size Bulleted Headline (#{size})",
    bulletText: loop.index,
    bulletColor: "indigo",
    attributes: {
      class: ["u-bolt-margin-bottom-xsmall"]
    }
  } only %}
{% endfor %}

<br>

{% for size in schema.properties.size.enum %}
  {% include "@bolt-components-headline/text.twig" with {
    size: size,
    weight: "bold",
    text: "Auto-size Bulleted Headline #{size}",
    bulletText: loop.index,
    bulletColor: "indigo",
    bulletSize: "auto",
    attributes: {
      class: ["u-bolt-margin-bottom-xsmall"]
    }
  } only %}
{% endfor %}

<hr>

  {% include "@bolt-components-headline/headline.twig" with {
    size: "xxlarge",
    text: "bulletColor",
    tag: "h2",
  } only %}

<p>
  By setting the <code>bulletColor</code> prop to <code>indigo</code>, <code>purple</code>, <code>teal</code>, or <code>orange</code>, you can choose the background color of the Headline Bullet.
</p>

{% grid "o-bolt-grid--medium o-bolt-grid--matrix" %}
  {% for color in schema.properties.bulletColor.enum %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxlarge",
        text: "Bulleted Headline w/ Number",
        bulletText: loop.index,
        bulletColor: color
      } only %}
    {% endcell %}
  {% endfor %}

  {% set letters = ["A", "B", "C", "D"] %}
  {% for letter in letters %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxlarge",
        text: "Bulleted Headline w/ Letter",
        bulletText: letter,
        bulletColor: schema.properties.bulletColor.enum[loop.index0]
      } only %}
    {% endcell %}
  {% endfor %}
{% endgrid %}

<hr>

{% include "@bolt-components-headline/headline.twig" with {
  size: "xxlarge",
  text: "Theming",
  attributes: {
    class: ["u-bolt-margin-bottom-medium"]
  }
} only %}

<p>
  If you don't specify a <code>bulletColor</code>, the current theme's colors will be used instead.
</p>

{% grid "o-bolt-grid--full" %}
  {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
