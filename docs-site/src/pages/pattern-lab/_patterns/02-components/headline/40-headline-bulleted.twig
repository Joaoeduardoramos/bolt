
{% set schema = bolt.data.components['@bolt-components-headline'].schema %}

{% include "@bolt-components-headline/headline.twig" with {
  size: "xxxlarge",
  text: "Bulleted Headline",
  tag: "h1",
  attributes: {
    class: ["u-bolt-margin-bottom-medium"]
  }
} only %}

{% include "@bolt-components-headline/headline.twig" with {
  size: "xxlarge",
  text: "Basic Usage",
  tag: "h2",
  attributes: {
    class: ["u-bolt-margin-bottom-medium"]
  }
} only %}

{% set withoutColorExample %}{% verbatim %}{% include "@bolt-components-headline/headline.twig" with {
  text: "Example bulleted headline (w/o bulletColor)",
  bulletText: 7,
} only %}{% endverbatim %}{% endset %}

{% include "@bolt-components-headline/headline.twig" with {
  text: "Example bulleted headline (w/o bulletColor)",
  bulletText: 7,
} only %}

{% include "@bolt-components-code-snippet/code-snippet.twig" with {
  lang: "twig",
  content: withoutColorExample
} %}

{% set withColorExample %}{% verbatim %}{% include "@bolt-components-headline/headline.twig" with {
  text: "Example bulleted headline (w/ bulletColor)",
  bulletText: 42,
  bulletColor: "orange"
} only %}{% endverbatim %}{% endset %}

{% include "@bolt-components-headline/headline.twig" with {
  text: "Example bulleted headline (w/ bulletColor)",
  bulletText: 42,
  bulletColor: "orange"
} only %}

{% include "@bolt-components-code-snippet/code-snippet.twig" with {
  lang: "twig",
  content: withColorExample
} %}

<hr>

{% grid %}
  {% cell "u-bolt-width-12/12" %}
    {% include "@bolt-components-headline/headline.twig" with {
      size: "xxlarge",
      text: "Up to 3 digits supported",
      tag: "h2",
      attributes: {
        class: ["u-bolt-margin-bottom-xsmall"]
      }
    } only %}
  {% endcell %}

  {% cell "u-bolt-width-12/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-headline/headline.twig" with {
      size: "xxlarge",
      text: "Single-digit",
      bulletText: 7,
    } only %}
  {% endcell %}

  {% cell "u-bolt-width-12/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-headline/headline.twig" with {
      size: "xxlarge",
      text: "Double-digit",
      bulletText: 42,
    } only %}
  {% endcell %}

  {% cell "u-bolt-width-12/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-headline/headline.twig" with {
      size: "xxlarge",
      text: "Triple-digit",
      bulletText: 123,
    } only %}
  {% endcell %}
{% endgrid %}


