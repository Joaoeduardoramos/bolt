{% set trigger %}
  {% include "@bolt-components-headline/text.twig" with {
    text: "CRM",
    icon: {
      name: "info-open",
      position: "after",
    }
  } only %}
{% endset %}
{% set content = "Customer relationship management" %}

{% set tooltips_top %}
  <bolt-list display="flex" spacing="xlarge">
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          placement: "bottom-left",
          trigger: {
            content: trigger,
          },
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          placement: "bottom",
          trigger: {
            content: trigger,
          },
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          placement: "bottom-right",
          trigger: {
            content: trigger,
          },
          content: content,
        } only %}
      </div>
    </bolt-list-item>
  </bolt-list>
{% endset %}
