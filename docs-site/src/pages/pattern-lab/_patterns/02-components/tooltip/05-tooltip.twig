{% set trigger %}
  {% include "@bolt-components-headline/text.twig" with {
    text: "CRM",
    tag: "span",
    icon: {
      name: "info-open",
      position: "after",
    }
  } only %}
{% endset %}
{% set content = "Customer relationship management" %}

{% set tooltips_top %}
  <bolt-list display="flex" spacing="xlarge">
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
  </bolt-list>
{% endset %}
{% set tooltips_right %}
  <bolt-list spacing="xxlarge">
    <bolt-list-item>
      <div class="u-bolt-text-align-right">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-right">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-right">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
  </bolt-list>
{% endset %}
{% set tooltips_bottom %}
  <bolt-list display="flex" spacing="xlarge">
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
      </div>
    </bolt-list-item>
    <bolt-list-item>
      <div class="u-bolt-text-align-center">
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          trigger: trigger,
          content: content,
        } only %}
