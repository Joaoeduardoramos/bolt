{% set grid %}
  {% include "@bolt-components-grid/grid.twig" with {
    gutter: "small",
    items: [
      {
        column_start: "2",
        column_span: "10",
        row_start: "1",
        content: tooltips_top,
      },
      {
        column_start: "12",
        column_span: "1",
        row_start: "2",
        content: tooltips_right,
      },
      {
        column_start: "2",
        column_span: "10",
        row_start: "3",
        content: tooltips_bottom,
      },
      {
        column_start: "1",
        column_span: "1",
        row_start: "2",
        content: tooltips_left,
      },
    ]
  } only %}
{% endset %}

<div class="t-bolt-xlight u-bolt-padding-xlarge">
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    full_bleed: false,
    content: grid,
  } only %}
</div>




{% set trigger_content %}
  <span class="u-bolt-color-gray">
    {% include "@bolt-components-icon/icon.twig" with {
      name: "lock",
    } only %}
  </span>
{% endset %}
{% set tooltips %}
  {% include "@bolt-components-tooltip/tooltip.twig" with {
    trigger: {
      content: trigger_content,
    },
    content: "Closed for replies",
  } only %}
  <bolt-tooltip>
    <span class="u-bolt-color-success"><bolt-icon name="check-solid"></bolt-icon></span>
    <span slot="content">Solved</span>
  </bolt-tooltip>
  <bolt-tooltip>
    <span class="u-bolt-color-error"><bolt-icon name="close-solid"></bolt-icon></span>
    <span slot="content">This is no bueno. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttito. Quisque eget odio ac lectus vestibulum faucibus eget in metus. In pellentesque.</span>
  </bolt-tooltip>
{% endset %}
<div class="u-bolt-margin-xlarge u-bolt-padding-small u-bolt-shadow-level-30">
  <bolt-list display="flex">
    <bolt-list-item>
      <bolt-text headline>
        This is a thread
      </bolt-text>
    </bolt-list-item>
    <bolt-list-item>
      <bolt-list display="inline" align="end" separator="solid">
        <bolt-list-item>
          {{ tooltips }}
        </bolt-list-item>
        <bolt-list-item>
          16 replies
        </bolt-list-item>
        <bolt-list-item>
          34 views
        </bolt-list-item>
      </bolt-list>
    </bolt-list-item>
  </bolt-list>
</div>


<div class="u-bolt-margin-xlarge u-bolt-padding-small">
  <bolt-list display="inline">
    <bolt-list-item>
      <bolt-tooltip>
        <bolt-link url="https://pega.com/glossary#crm">CRM</bolt-link>
        <span slot="content">Customer relationship management</span>
      </bolt-tooltip>
    </bolt-list-item>
    <bolt-list-item>
      <bolt-tooltip>
        <bolt-button>Download</bolt-button>
        <span slot="content">File size: 25MB</span>
      </bolt-tooltip>
    </bolt-list-item>
    <bolt-list-item>
      <bolt-tooltip>
        <bolt-button url="https://facebook.com" icon-only>
          <bolt-icon name="facebook" slot="before"></bolt-icon>
        </bolt-button>
        <span slot="content">Share on Facebook</span>
      </bolt-tooltip>
    </bolt-list-item>
  </bolt-list>
</div>
