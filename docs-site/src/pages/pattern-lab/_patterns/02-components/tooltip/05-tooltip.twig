{% set grid %}
  {% include "@bolt-components-grid/grid.twig" with {
    gutter: "small",
    items: [
      {
        column_start: "2",
        column_span: "10",
        row_start: "1",
        content: tooltips_top,
      },
      {
        column_start: "12",
        column_span: "1",
        row_start: "2",
        content: tooltips_right,
      },
      {
        column_start: "2",
        column_span: "10",
        row_start: "3",
        content: tooltips_bottom,
      },
      {
        column_start: "1",
        column_span: "1",
        row_start: "2",
        content: tooltips_left,
      },
    ]
  } only %}
{% endset %}

<div class="t-bolt-xlight u-bolt-padding-xlarge">
  {% include "@bolt-components-band/band.twig" with {
    theme: "none",
    full_bleed: false,
    content: grid,
  } only %}
</div>





{% set trigger = "<span class='u-bolt-color-gray'><bolt-icon name='lock'></bolt-icon></span>" %}
{% set content = "Closed for replies" %}
{% set tooltip %}
  {% include "@bolt-components-tooltip/tooltip.twig" with {
    placement: "bottom",
    trigger: trigger,
    content: content,
  } only %}
{% endset %}
<div class="u-bolt-margin-large u-bolt-padding-small u-bolt-shadow-level-10">
  <bolt-list display="flex">
    <bolt-list-item>
      <bolt-text headline>
        This is a thread
      </bolt-text>
    </bolt-list-item>
    <bolt-list-item>
      <bolt-list display="inline" align="end" separator="solid">
        <bolt-list-item>
          {{ tooltip }}
        </bolt-list-item>
        <bolt-list-item>
          16 replies
        </bolt-list-item>
        <bolt-list-item>
          34 views
        </bolt-list-item>
      </bolt-list>
    </bolt-list-item>
  </bolt-list>
</div>
