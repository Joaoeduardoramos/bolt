{% set schema = bolt.data.components["@bolt-components-svg-animations"].schema %}

<h3>SVG Animations</h3>

<h4>Connection Band</h4>
{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  animType: "connectionBand",
  direction: "left"
} only %}

{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  animType: "connectionBand",
  direction: "right"
} only %}

<h4>Radar</h4>
{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  speed: 4000,
  animType: "radar",
  theme: "dark"
} only %}

{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  speed: 4000,
  animType: "radar",
  theme: "light"
} only %}

<h4>Orbit</h4>
{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  speed: 4000,
  animType: "orbit"
} only %}

<h4>Automation</h4>
{% include "@bolt-components-svg-animations/svg-animations.twig" with {
  speed: 2000,
  animType: "automation"
} only %}
