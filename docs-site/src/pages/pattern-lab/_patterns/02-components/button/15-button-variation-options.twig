{% set schema = bolt.data.components["@bolt-components-button"].schema %}

{#
  This page exists ONLY for creating our demos.
  DO NOT use "is-hover", "is-focus", or "is-active" classes for implementation.
  Strictly for demo purposes.
#}

<p><mark>Note: interactive states only appear when the user interacts with the button, they are not variations that are available for use.</mark></p>

<h3>Regular Variations</h3>
{% for variation in schema.properties.variation.enum %}
  {% set button %}
    {% include "@bolt-components-button/button.twig" with {
      text: variation|capitalize ~ " button",
      variation: variation
    } only %}
  {% endset %}
  {% set button_disabled %}
    {% include "@bolt-components-button/button.twig" with {
      text: variation|capitalize ~ " button (disabled)",
      disabled: true,
      variation: variation
    } only %}
  {% endset %}

  {% include "@bolt-components-list/list.twig" with {
    display: "inline",
    items: [
      button,
      button_disabled,
    ]
  } only %}
{% endfor %}

<h3>Interactive States</h3>
{% for variation in schema.properties.variation.enum %}
  {% set button_hover %}
    {% include "@bolt-components-button/button.twig" with {
      text: variation|capitalize ~ " button (hover)",
      attributes: {
        class: [
          "is-hover"
        ]
      },
      variation: variation
    } only %}
  {% endset %}
  {% set button_focus %}
    {% include "@bolt-components-button/button.twig" with {
      text: variation|capitalize ~ " button (focus)",
      attributes: {
        class: [
          "is-focus"
        ]
      },
      variation: variation
    } only %}
  {% endset %}
  {% set button_active %}
    {% include "@bolt-components-button/button.twig" with {
      text: variation|capitalize ~ " button (active)",
      attributes: {
        class: [
          "is-active"
        ]
      },
      variation: variation
    } only %}
  {% endset %}

  {% include "@bolt-components-list/list.twig" with {
    display: "inline",
    items: [
      button_focus,
      button_hover,
      button_active,
    ]
  } only %}
{% endfor %}
