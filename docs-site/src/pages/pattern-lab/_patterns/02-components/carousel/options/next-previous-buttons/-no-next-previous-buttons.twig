{% embed "@bolt-components-carousel/carousel.twig" with {
  slides: [
    include("_carousel-slide-content.twig"),
    include("_carousel-slide-content.twig"),
    include("_carousel-slide-content.twig"),
  ],
  noNavButtons: true,
} only %}
  {% block controls %}
    <bolt-button slot="previous-btn" color="text" icon-only>
      Previous
      <bolt-icon size="large" slot="before" name="chevron-left"></bolt-icon>
    </bolt-button>

    <bolt-button slot="next-btn" color="text" icon-only>
      Next
      <bolt-icon size="large" slot="after" name="chevron-right"></bolt-icon>
    </bolt-button>
  {% endblock %}
{% endembed %}

{% embed "@bolt-components-carousel/carousel.twig" with {
  slides: [
    include("_carousel-slide-content.twig"),
    include("_carousel-slide-content.twig"),
    include("_carousel-slide-content.twig"),
  ],
  extraSpaceBetween: true,
  noNavButtons: true,
} only %}
  {% block controls %}
    <bolt-button slot="previous-btn" color="text" icon-only>
      Previous
      <bolt-icon size="large" slot="before" name="chevron-left"></bolt-icon>
    </bolt-button>

    <bolt-button slot="next-btn" color="text" icon-only>
      Next
      <bolt-icon size="large" slot="after" name="chevron-right"></bolt-icon>
    </bolt-button>
  {% endblock %}
{% endembed %}

{% include "@bolt-components-carousel/carousel.twig" with {
  slides: [
    include("_carousel-slide-image.twig"),
    include("_carousel-slide-image.twig"),
    include("_carousel-slide-image.twig"),
    include("_carousel-slide-image.twig"),
  ],
  navPosition: "outside"
} only %}