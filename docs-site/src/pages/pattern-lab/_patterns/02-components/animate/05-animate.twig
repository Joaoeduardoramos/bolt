<div class="demo-animate">

  <button class="demo-animate__trigger" onclick="trigger('in')">Trigger Build In</button>
  <button class="demo-animate__trigger" onclick="trigger('out')">Trigger Build Out</button>
  <div class="demo-animate__items">
    <div class="demo-animate__item">
      <bolt-animate
        initial-appearance="hidden"
        in="fade-in"
        in-duration="2000"
        idle="pulse"
        out="fade-out"
      >
        <div is="shadow-root">
          <h2>In, Idle, Out</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        initial-appearance="hidden"
        in="fade-in"
      >
        <div is="shadow-root">
          <h2>In</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        idle="pulse"
        idle-duration="5000"
        out="fade-out"
      >
        <div is="shadow-root">
          <h2>Idle, Out</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        out="fade-out"
      >
        <div is="shadow-root">
         <h2>Out</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        initial-appearance="hidden"
        in="fade-in"
        out="fade-out"
      >
        <div is="shadow-root">
          <h2>In, Out</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        initial-appearance="hidden"
        in="fade-in"
        idle="pulse"
      >
        <div is="shadow-root">
          <h2>In, Idle</h2>
        </div>
      </bolt-animate>
    </div>

    <div class="demo-animate__item">
      <bolt-animate
        idle="pulse"
        idle-duration="5000"
      >
        <div is="shadow-root">
          <h2>Idle</h2>
        </div>
      </bolt-animate>
    </div>
  </div>


  <style>
    .demo-animate__item {
      margin-bottom: 10px;
    }
  </style>

  <script type="application/javascript">
    // This is untranspiled IE 11 code, so polyfill foreach.

    function trigger(type) {
      const els = document.querySelectorAll('.demo-animate__items bolt-animate');
      els.forEach(function(el) {
        if (type === 'in') {
          el.triggerAnimIn();
        }
        if (type === 'out') {
          el.triggerAnimOut();
        }
        // el.setAttribute('trigger', type);
      });
    }

  </script>

</div>
