{% embed "@bolt-components-band/band.twig" with {
  theme: "dark",
  size: "medium",
  background: {
    "opacity": "heavy",
    "fill": "color",
    "focalPoint": {
      "vertical": "center",
      "horizontal": "center"
    },
    "contentItems": [
      {
        "pattern": "image",
        "src": "/images/content/backgrounds/background-tall-1.jpg"
      },
      {
        "pattern": "video",
        "is_background_video": true,
        "video_id": "3861325118001",
        "account_id": "1900410236",
        "player_id": "r1CAdLzTW",
        "video_uuid": "pega-video-3861325118001-d",
        "on_init": "initBrightcovePlugins",
        "attributes": {
          "data-email-subject": "Pega - CRM Evolved Atlanta: Customer Engagement in a Digital World",
          "data-email-body": "Check out this video from Pega",
          "data-email-videourl": "https://demo1.d8.pega.com/insights/resources/crm-evolved-atlanta-customer-engagement-digital-world"
        }
      }
    ]
  }
} %}
  {% block band_content %}
    <p>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    </p>

    {% include "@bolt/_video-inline-script.twig" with {
      socialUrl: "https://demo1.d8.pega.com/insights/resources/crm-evolved-atlanta-customer-engagement-digital-world"
    } %}

    {% include "@bolt/button.twig" with {
        text: "Watch Video",
        tag: "button",
        attributes: {
          "on-click": "toggle",
          "on-click-target": "pega-video-3861325118001-d"
        }
    } only %}
  {% endblock band_content %}
{% endembed %}
