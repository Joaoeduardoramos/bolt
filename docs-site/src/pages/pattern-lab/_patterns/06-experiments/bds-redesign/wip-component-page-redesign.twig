{% set no_separator_usage %}
<bolt-accordion no-separator>
  <bolt-accordion-item>
    <bolt-text headline font-size="large" slot="trigger">There are no separators</bolt-text>
    <bolt-text>Accordion item 1 content.</bolt-text>
  </bolt-accordion-item>
