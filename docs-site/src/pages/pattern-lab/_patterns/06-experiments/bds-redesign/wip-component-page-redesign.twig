{% macro code_example(code) %}
  <bolt-code-snippet syntax="dark" lang="html">{% spaceless %}
    {{ code | replace({
      '<': '&lt;',
      '>': '&gt;',
    }) | trim | raw }}
  {% endspaceless %}</bolt-code-snippet>
{% endmacro %}

{% import _self as accordion_demo %}

{% set basic_usage %}
<bolt-accordion>
  <bolt-accordion-item>
    <bolt-text headline font-size="large" slot="trigger">Accordion item 1</bolt-text>
    <bolt-text>Accordion item 1 content.</bolt-text>
  </bolt-accordion-item>
  <bolt-accordion-item>
    <bolt-text headline font-size="large" slot="trigger">Accordion item 2</bolt-text>
    <bolt-text>Accordion item 2 content.</bolt-text>
  </bolt-accordion-item>
  <bolt-accordion-item>
    <bolt-text headline font-size="large" slot="trigger">Accordion item 3</bolt-text>
    <bolt-text>Accordion item 3 content.</bolt-text>
  </bolt-accordion-item>
</bolt-accordion>
{% endset %}

