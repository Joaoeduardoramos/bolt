  <bolt-accordion-item>
    <bolt-text headline font-size="large" slot="trigger">Accordion items</bolt-text>
    <bolt-text>Accordion item 3 content.</bolt-text>
  </bolt-accordion-item>
</bolt-accordion>
{% endset %}

