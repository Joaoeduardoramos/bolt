{% if componentName %}
  {% set schema = bolt.data.components["@bolt-components-#{componentName}"].schema %}
  {% set readmeFile = "@bolt-components-#{componentName}/README.md" %}
  {% set changeLogFile = "@bolt-components-#{componentName}/CHANGELOG.md" %}
  {% set testingFile = "@bolt-components-#{componentName}/TESTING.md" %}
  {% set pkg = get_data("@bolt-components-#{componentName}/package.json") %}
{% endif %}

{% set componentVersion = pkg.version %}
{% set hasJs = pkg.main %}
{% set hasScss = pkg.sass %}
{% set componentTitle = pkg.name %}

{% set isPrivate = pkg.private or fileExists(changeLogFile) == false ? true : false %}

{% set npmLink %}
  {% include "@bolt-components-link/link.twig" with {
    text: "yarn add #{componentTitle}",
    url: "https://www.npmjs.com/package/#{componentTitle}",
    target: "_blank",
    isHeadline: true,
  } only %}
{% endset %}

