{
  "name": "@bolt/bolt-starter",
  "description": "Drupal 8 Starter Theme using the Bolt Design System",
  "version": "2.4.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "FORCE_COLOR=1 npx npm-run-all --serial build:*",
    "build:en": "bolt build --prod",
    "build:ja": "bolt build --prod --config-file .boltrc--ja.js",
    "start": "bolt start",
    "test": "jest __tests__/index.js",
    "postbuild": "npm run test"
  },
  "dependencies": {
    "yargs": "^13.2.4",
    "jest": "^24.8.0",
    "@bolt/core": "file:../../../../../packages/core",
    "@bolt/build-tools": "file:../../../../../packages/build-tools",
    "@bolt/components-button": "file:../../../../../packages/components/bolt-button",
    "@bolt/components-headline": "file:../../../../../packages/components/bolt-headline",
    "@bolt/components-icon": "file:../../../../../packages/components/bolt-icon",
    "@bolt/components-link": "file:../../../../../packages/components/bolt-link",
    "@bolt/components-navbar": "file:../../../../../packages/components/bolt-navbar",
    "@bolt/components-sticky": "file:../../../../../packages/components/bolt-sticky",
    "@bolt/global": "file:../../../../../packages/global"
  }
}
