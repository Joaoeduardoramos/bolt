{
  "name": "@bolt/bolt-starter",
  "description": "Drupal 8 Starter Theme using the Bolt Design System",
  "version": "2.4.0",
  "private": true,
  "scripts": {
    "build": "FORCE_COLOR=1 npx npm-run-all --serial build:*",
    "build:en": "bolt build --prod",
    "build:ja": "bolt build --prod --config-file .boltrc--ja.js",
    "start": "bolt start",
    "test": "jest __tests__/index.js",
    "postbuild": "npm run test"
  },
  "dependencies": {
    "yargs": "^13.2.4",
    "jest": "^24.8.0",
    "@bolt/core": "^2.6.0",
    "@bolt/build-tools": "^2.6.0",
    "@bolt/components-button": "^2.6.0",
    "@bolt/components-headline": "^2.6.0",
    "@bolt/components-icon": "^2.6.0",
    "@bolt/components-link": "^2.6.0",
    "@bolt/components-navbar": "^2.6.0",
    "@bolt/components-sticky": "^2.6.0",
    "@bolt/global": "^2.6.0",
    "patch-package": "^6.1.4",
    "postinstall-postinstall": "^2.0.0"
  },
  "workspaces": {
    "packages": [
      "../../../../../packages/core",
      "../../../../../packages/build-tools",
      "../../../../../packages/global",
      "../../../../../packages/components/*"
    ]
  }
}
