{
  "name": "@bolt/bolt-starter",
  "description": "Drupal 8 Starter Theme using the Bolt Design System",
  "version": "2.4.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "FORCE_COLOR=1 npx npm-run-all --serial build:*",
    "build:en": "bolt build --prod",
    "build:ja": "bolt build --prod --config-file .boltrc--ja.js",
    "start": "bolt start",
    "postbuild": "yarn run test",
    "test": "jest __tests__/index.js",
    "setup": "yarn && yarn run patch:core && yarn run patch:image",
    "patch:core": "npx patch-package --patch-dir node_modules/@bolt/core/.patches",
    "patch:image": "npx patch-package --patch-dir node_modules/@bolt/components-image/patches"
  },
  "dependencies": {
    "@bolt/build-tools": "latest",
    "@bolt/components-button": "latest",
    "@bolt/components-headline": "latest",
    "@bolt/components-icon": "latest",
    "@bolt/components-image": "^2.6.0",
    "@bolt/components-link": "latest",
    "@bolt/components-navbar": "latest",
    "@bolt/components-sticky": "latest",
    "@bolt/core": "^2.6.0",
    "@bolt/global": "latest",
    "jest": "^24.9.0",
    "patch-package": "^6.1.4",
    "yargs": "^14.0.0"
  }
}
