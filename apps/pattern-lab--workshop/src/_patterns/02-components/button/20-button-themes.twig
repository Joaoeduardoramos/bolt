{% set schema = get_data('@bolt-components-button/button.schema.json') %}

{% for theme in get_data(schema.properties.theme.ref).enum %}
  <p>Button theme: {{ theme }}</p>
  {% embed "@utils/theme-demo.twig" %}
    {% block demo_content %}
      {% include "@bolt-components-button/button.twig" with {
        "theme:": "dark",
        "text": theme ~" Button Theme"
      } %}
    {% endblock %}
  {% endembed %}
{% endfor %}
