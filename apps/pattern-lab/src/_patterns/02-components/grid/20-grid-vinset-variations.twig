{% for vinset in vinsets %}
  Vinset: {{ vinset }}

  {% include "@bolt-components-grid/grid.twig" with {
    vinset: vinset,
    row_gutter: "small",
    attributes: {
      class: [
        "t-bolt-light"
      ]
    },
    items: [
      {
        row_start: "1",
        column_start: "1",
        column_span: "12",
        content: "Grid Item 1",
