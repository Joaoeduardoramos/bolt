          class: [
            "t-bolt-dark",
            "u-bolt-padding-medium",
          ]
        }
      },
      {
        row_start: "2",
        column_start: "1",
        column_span: "12",
        content: "Grid Item 2",
        attributes: {
          class: [
            "t-bolt-dark",
            "u-bolt-padding-medium",
          ]
        }
      },
      {
        row_start: "3",
        column_start: "1",
        column_span: "12",
        content: "Grid Item 3",
        attributes: {
          class: [
            "t-bolt-dark",
            "u-bolt-padding-medium",
          ]
        }
      },
    ]
  } only %}
{% endfor %}
