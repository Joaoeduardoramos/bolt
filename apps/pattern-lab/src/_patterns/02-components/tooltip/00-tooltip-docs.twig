{% set schema = get_data('@bolt-components-tooltip/tooltip.schema.yml') %}
{% set code %}
  {% verbatim %}
  {% include "@bolt-components-tooltip/tooltip.twig" with {
    trigger: {
      type: "button",
      text: "Trigger",
      icon: {
        name: "info-open",
        size: "medium"
      },
      toggle: {
        text: "Trigger",
        name: "close-open"
      }
    },
    content: "Here is a tooltip! And it even comes with a button toggle!",
    id: "tooltip-example-1",
    type: "action",
    position: "up",
    noWrap: false,
    spacing: "small"
  } only %}
  {% endverbatim %}
{% endset %}

{% include '@utils/docs.twig' with {
  schema: schema,
  code: code,
  readmeFile: '@bolt-components-tooltip/README.md',
} only %}