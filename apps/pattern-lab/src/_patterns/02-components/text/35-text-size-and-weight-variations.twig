{% set schema = bolt.data.components['@bolt-components-text'].schema %}

{% for fontSize in schema.properties.fontSize.enum %}
  {% for fontWeight in schema.properties.fontWeight.enum %}

    {% include "@bolt-components-text/text.twig" with {
      text: "This is " ~ fontWeight ~ " " ~ fontSize ~ " text",
      fontWeight: fontWeight,
      fontSize: fontSize
    } only %}

  {% endfor %}
{% endfor %}
