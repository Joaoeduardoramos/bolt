{% set videoUuid = "js-bolt-video-uuid-card-with-url" %}

{% grid "o-bolt-grid--flex o-bolt-grid--center" %}
  {% cell "u-bolt-width-6/12 u-bolt-width-3/12@small" %}
    {% include "@bolt-components-card/card.twig" with {
      media: {
        image: {
          src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        headline: "No link",
        paragraph: "This card doesn't have an link.",
      },
      actions: [
        {
          text: "This is a button",
          url: "http://pega.com",
        }
      ],
    } only %}
  {% endcell %}
  {% cell "u-bolt-width-6/12 u-bolt-width-3/12@small" %}
    {% include "@bolt-components-card/card.twig" with {
      link: {
        href: "http://pega.com",
      },
      media: {
        image: {
          src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        headline: "With link",
        paragraph: "This card has an link, which makes the whole card clickable, but you can still have the action button to link somewhere else if needed.",
      },
      actions: [
        {
          text: "This button has a diffent link",
          url: "http://google.com",
        }
      ],
    } only %}
  {% endcell %}
  {% cell "u-bolt-width-6/12 u-bolt-width-3/12@small" %}
    {% include "@bolt-components-card/card.twig" with {
      link: {
        href: "#!",
        attributes: {
          "on-click": "toggle",
          "on-click-target": videoUuid,
        },
      },
      media: {
        video: {
          videoId: "5609376179001",
          accountId: "1900410236",
          playerId: "r1CAdLzTW",
          videoUuid: videoUuid,
          showMeta: true,
          showMetaTitle: false,
        },
      },
      body: {
        headline: "With link and video",
        paragraph: "This card has an link, which makes the whole card clickable, and you can make it play/pause the video. Action button is optional in this case.",
      },
      actions: [
        {
          text: "This button is video control",
          attributes: {
            "on-click": "toggle",
            "on-click-target": videoUuid,
          },
        }
      ],
    } only %}
  {% endcell %}
{% endgrid %}
