
{% macro video() %}
<bolt-card-media>
    <bolt-ratio aspect-ratio-height="9" aspect-ratio-width="16">
      <bolt-video data-setup='{"techOrder": ["Html5"], "resizeManager": false}' video-id="3861325118001" account-id="1900410236" show-meta show-meta-title player-id="r1CAdLzTW" controls></bolt-video>
    </bolt-ratio>
  </bolt-card-media>
{% endmacro %}

{% macro image() %}
<bolt-ratio  aspect-ratio-height="3" aspect-ratio-width="4" style="--aspect-ratio-height: 3; --aspect-ratio-width: 4;">
  <img src="/pattern-lab/images/placeholders/tout-4x3-climber.jpg">
</bolt-ratio>
{% endmacro %}

{% macro body() %}
<bolt-card-body>Xdark card with <bolt-link target="_blank" url="https://boltdesignsystem.com/docs">external link</bolt-link>.</bolt-card-body>
{% endmacro %}

{% macro actions() %}
<bolt-card-actions>
    <bolt-card-action url="https://google.com">Test</bolt-card-action>
    <bolt-card-action url="https://www1.pega.com" external>Test 2</bolt-card-action>
  </bolt-card-actions>
{% endmacro %}

{% macro code_example(code, copy) %}
<bolt-code-snippet lang="html" {{ copy ? 'copy-to-clipboard' : '' }}>{% spaceless %}
  {{ code | replace({
    '<': '&lt;', 
    '>': '&gt;',
  }) | trim | raw }}  
{% endspaceless %}</bolt-code-snippet>
{% endmacro %}


{% import _self as card_demo %}


{% set card_demo_1 %}
<bolt-card theme="xdark" url="https://google.com">
  {% include card_demo.video() %}
  {% include card_demo.body() %}
  {% include card_demo.actions() %}
</bolt-card>
{% endset %}

<div class="o-bolt-wrapper">
  {% grid %}
    {% cell "u-bolt-width-1/1" %}
      <bolt-text headline>Option 1: <code>url</code> prop</bolt-text>
      
      <bolt-text tag="p">The simplest way to get an entire card to be clickable is by passing a URL to the <code>url</code> prop on the main <code>&lt;bolt-card&gt;</code> component itself.</bolt-text>

      {% include card_demo.code_example('<bolt-card url="https://google.com">...</bolt-card>', false) %}
    {% endcell %}

    {% cell "u-bolt-width-1/1" %}
      <div class="u-bolt-padding-medium" style="border: 1px solid rgba(0, 0, 0, .2);">
        <div style="max-width: 480px; margin: 0 auto;">
          {{ card_demo_1 }}
        </div>
      </div>
    {% endcell %}

    {% cell "u-bolt-width-1/1" %}
      {% include card_demo.code_example(card_demo_1, true) %}
    {% endcell %}
  {% endgrid %}
</div>



