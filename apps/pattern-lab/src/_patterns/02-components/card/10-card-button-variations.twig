{% grid "o-bolt-grid--flex o-bolt-grid--center" %}
  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    <h3>Internal</h3>
    {% include "@bolt-components-card/card.twig" with {
      media: {
        image: {
          src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        eyebrow: "This is an eyebrow",
        headline: "This is a headline",
        paragraph: "This is a paragraph.",
      },
      actions: [
        {
          text: "This is an internal button",
          url: "http://pega.com",
        },
      ],
    } only %}
  {% endcell %}
  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    <h3>External</h3>
    {% include "@bolt-components-card/card.twig" with {
      media: {
        image: {
          src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        eyebrow: "This is an eyebrow",
        headline: "This is a headline",
        paragraph: "This is a paragraph.",
      },
      actions: [
        {
          text: "This is an external button",
          url: "http://pega.com",
          external: true,
        },
      ],
    } only %}
  {% endcell %}
{% endgrid %}
