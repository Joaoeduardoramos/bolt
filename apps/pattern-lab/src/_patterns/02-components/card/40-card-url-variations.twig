<h3>No URL</h3>
<div class="u-bolt-margin-bottom-medium">
  {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
      {% include "@bolt-components-card/card.twig" with {
        media: {
          image: {
            src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
            alt: "Image alt.",
          },
        },
        body: {
          paragraph: "This card doesn't have an URL.",
        },
        actions: [
          {
            text: "This is a button",
            url: "http://pega.com",
          }
        ],
      } only %}
    {% endcell %}
  {% endgrid %}
</div>

<h3>With URL</h3>
<div class="u-bolt-margin-bottom-medium">
  {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
      {% include "@bolt-components-card/card.twig" with {
        url: "http://pega.com",
        media: {
          image: {
            src: "/pattern-lab/images/placeholders/landscape-16x9-mountains.jpg",
            alt: "Image alt.",
          },
        },
        body: {
          paragraph: "This card has an URL.",
        },
        actions: [
          {
            text: "This whole card is clickable",
            url: "http://pega.com",
          }
        ],
      } only %}
    {% endcell %}
  {% endgrid %}
</div>
