{% set videoUuid = "js-bolt-video-uuid-card-with-video" %}

{% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
  {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
    {% include "@bolt-components-card/card.twig" with {
      tag: "article",
      media: {
        video: {
          videoId: "5609376179001",
          accountId: "1900410236",
          playerId: "r1CAdLzTW",
          videoUuid: videoUuid,
          showMeta: true,
          showMetaTitle: false,
        },
      },
      body: {
        eyebrow: "Video",
        headline: "Video Meta Title Goes Here.",
        paragraph: "Anthem debuts its next-generation service desktop, driving frictionless customer experiences.",
      },
      actions: [
        {
          text: "Play or Pause",
          attributes: {
            "on-click": "toggle",
            "on-click-target": videoUuid
          }
        },
      ],
    } only %}
  {% endcell %}
{% endgrid %}
