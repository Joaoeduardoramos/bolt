<bolt-list display="inline@small" spacing="small" separator="dashed">
  <bolt-list-item>
      Item 1
  </bolt-list-item>
  <bolt-list-item>
      Item 2
  </bolt-list-item>
  <bolt-list-item>
      Item 3
  </bolt-list-item>
  <bolt-list-item>
      Item 4
  </bolt-list-item>
  <bolt-list-item>
      Item 5
  </bolt-list-item>
</bolt-list>

