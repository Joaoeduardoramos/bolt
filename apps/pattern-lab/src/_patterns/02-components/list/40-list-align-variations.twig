{% set schema = bolt.data.components["@bolt-components-list"].schema %}

<p>
  <mark>Align prop only works with inline display, it has no effects on block display.</mark>
</p>

{% for align in schema.properties.align.enum %}
  <h3>Horizontally align inline items: {{ align }}</h3>
  {% include "@bolt-components-list/list.twig" with {
    display: "inline",
    align: align,
    items: [
      include("@bolt-components-placeholder/placeholder.twig", {
        text: "Placeholder 1",
        size: "xsmall",
      }),
      include("@bolt-components-placeholder/placeholder.twig", {
        text: "Placeholder 2",
        size: "xsmall",
      }),
      include("@bolt-components-placeholder/placeholder.twig", {
        text: "Placeholder 3",
        size: "xsmall",
      }),
    ]
  } only %}
  <h3>Flex list align: {{ align }}</h3>
  {% include "@bolt-components-list/list.twig" with {
    display: "flex",
    align: align,
    separator: "solid",
    items: [
      "Placeholder 1",
      "Placeholder 2",
      "Placeholder 3"
    ]
  } only %}
{% endfor %}
