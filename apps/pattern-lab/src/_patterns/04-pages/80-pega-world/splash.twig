{% set hero_band_content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-1/1 u-bolt-width-9/12@small" %}
      {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
        {% cell "u-bolt-width-1/1 u-bolt-padding-bottom-large" %}
          {% include "@bolt/headline.twig" with {
            "size": "xxxlarge",
            "align": "center",
            "text": "Join us for this exciting thing!",
            "tag": "h1"
          } only %}
        {% endcell %}
        {% cell "u-bolt-width-1/1" %}
          {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--center o-bolt-grid--middle o-bolt-grid--matrix" %}
            {% cell "u-bolt-width-1/1 u-bolt-width-5/12@small" %}
              {% include "@bolt/image.twig" with {
                src: "/pattern-lab/images/placeholders/500x500.jpg",
                alt: "Bill"
              } only %}
            {% endcell %}
            {% cell "u-bolt-width-1/1 u-bolt-width-7/12@small" %}
              {% include "@bolt/eyebrow.twig" with {
                "text": "Keynote",
                "tag": "div"
              } only %}
              {% include "@bolt/headline.twig" with {
                "size": "xxlarge",
                "text": "Young Axl Rose",
                "tag": "h2"
              } only %}
              {% include "@bolt/text.twig" with {
                "text": "You know where ahhh?!?! You're in the PegaWorld baby! Yer gonna digitally transform your buiness!",
                "tag": "p"
              } only %}
              <a href="https://www.cvent.com/events/pegaworld-2018/registration-510ce28f40334ea195526c224ae26a21.aspx" class="c-bolt-button c-bolt-button--primary">Register now!</a>
            {% endcell %}
          {% endgrid %}
        {% endcell %}
      {% endgrid %}
    {% endcell %}
  {% endgrid %}
{% endset %}

