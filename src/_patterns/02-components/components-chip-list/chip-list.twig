{% if items %}
  {% set chipParams = {} %}
  {% set inlineListItems = [] %}

  {% for chip in items %}
    {% set chipItem %}
      {% include "@bolt/chip.twig" with chip only %}
    {% endset %}

    {% set inlineListItems = inlineListItems | merge([{
      "text": chipItem
    }]) %}
  {% endfor %}

  {% set chipParams = chipParams | merge({
    "items": inlineListItems
  }) %}

  {% include "@bolt/inline-list.twig" with chipParams only %}

{% endif %}