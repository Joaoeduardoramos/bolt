{# Sample Usage
#}


{% set prefix = "c-bolt-" %}

{% set themeOptions = [
  "xlight",
  "light",
  "dark",
  "xdark"
] %}

{% set Attributes = create_attribute(attributes|default({})) %}


{% set componentName = "navbar" %}
{% set baseClass = prefix ~ componentName %}


{% set theme = theme == false and theme is null ? "dark" : theme | default("dark") %}


{% set Classes = [
  baseClass
] %}

<bolt-{{ componentName }} bolt-component>

  {% embed "@bolt/band.twig" with {
    size: "xsmall",
    theme: theme,
    fullBleed: true
  } %}

    {% block band_background %}
      {% include "@bolt/background.twig" with {
        "opacity": "medium",
        "fill": "gradient",
        "focalPoint":
        {
          "vertical": "center",
          "horizontal": "left"
        }
      } only %}
    {% endblock band_background %}

    {% block band_content %}


      <nav class="c-bolt-navbar">
        <div class="c-bolt-navbar__title">
          {# {% include "@bolt/icon.twig" with {
            "name": title.icon.name
          } only %} #}
          {% include "@bolt/text.twig" with {
            "size": "large",
            "weight": "semibold",
            "tag": "h1",
            "text": title.text
          } only %}
        </div>
        <ul class="c-bolt-navbar__items">
          {% for item in navItems %}
            <li class="c-bolt-navbar__item">
              <a class="c-bolt-navbar__link" href="#{{ item.url }}" name="{{ item.url }}">
                {{ item.text }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endblock %}

  {% endembed %}

</bolt-{{ componentName }}>
