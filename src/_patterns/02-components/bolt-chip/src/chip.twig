{% set tags = ["span", "a"] %} {# Available Chip Types #}
{% set prefix = "c-bolt-" %}
{% set sizes = [
  "xsmall",
  "small",
  "medium",
] %}

{% set attributes = create_attribute(attributes|default({})) %}


{% set componentName = "chip" %}
{% set baseClass = prefix ~ componentName %}
{% set size = size | default("xsmall") %}

{% if url %}
  {% set tag = "a" %}
{% else %}
  {% set tag = tag in tags ? tag: "span" %}
{% endif %}


{% set classes = [
  baseClass,
  size in sizes ? baseClass ~ "--" ~ size : "",
  style in styles ? baseClass ~ "--" ~ style : ""
] %}


{% if url %}
  {% set attributes = attributes.setAttribute("href", url) %}
{% endif %}


<bolt-chip size="{{ size }}" bolt-component>
  <{{ tag }} {{ attributes.addClass(classes | raw) }}>
    <span class="{{ "#{baseClass}__item-text" }}">{{ text }}</span>
  </{{ tag }}>
</bolt-chip>
