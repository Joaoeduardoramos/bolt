{% set attributes = create_attribute(attributes | default({})) %}
{% set wrapperAttributes = create_attribute(wrapperAttributes | default({})) %}
{% set classes = ['c-bolt-input'] %}
{% set wrapperClasses = ['c-bolt-custom-input'] %}

<div{{ wrapperAttributes.addClass(wrapperClasses) }}>
  <textarea{{ attributes.addClass(classes) }}>{{ value }}</textarea>
</div>
