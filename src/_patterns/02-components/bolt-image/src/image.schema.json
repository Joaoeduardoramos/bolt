{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Image",
  "category": "component",
  "type": "object",
  "format": "grid",
  "properties": {
    "pattern": {
      "type": "string",
      "enum": ["image"],
      "options": {
        "hidden": true
      }
    },
    "src": {
      "title": "Image Source",
      "type": "string",
      "format": "url"
    },
    "alt": {
      "title": "Image Alt Text",
      "type": "string"
    }
  },
  "required": ["src", "alt"],
  "additionalProperties": false
}
