{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Bolt Background",
  "type": "object",
  "properties": {
    "opacity": {
      "type": "string",
      "enum": ["light", "medium", "heavy"]
    },
    "focalPoint": {
      "type": "object",
      "description": "Where the opacity background should originate.",
      "properties": {
        "horizontal": {
          "type": "string",
          "enum": ["center", "left", "right"]
        },
        "vertical": {
          "type": "string",
          "enum": ["center", "top", "bottom"]
        }
      }
    }
  },
  "required": []
}
