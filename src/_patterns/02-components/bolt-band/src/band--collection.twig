{% embed "@bolt/band.twig" with {
  size: size | default("large"),
  theme: theme | default("dark"),
  fullBleed: true
} %}
  {% block band_content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--matrix" %}
      
      {% for item in items %}
        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
        {# TODO: get length of items to divide into cells #}
          {% block collection_content %}
            {% include "@bolt/#{layout | default(item.layout) | default('teaser')}.twig" with item only %}
          {% endblock %}
        {% endcell %}
      {% endfor %}
          
    {% endgrid %}
  {% endblock band_content %}
{% endembed %}