{% extends "@bolt/form.twig" %}

{% set attributes = {
  "class": ["t-bolt-xlight"]
} %}

{% set children %}
  {% include "@bolt/form-element-demo-input-element.twig" with {
    "title": "First Name",
    "inputAttributes": {
      "placeholder": "Enter your first name"
    },
    "labelDisplayType": "floating"
  } only %}

  {% include "@bolt/form-element-demo-input-element.twig" with {
    "title": "Last Name",
    "inputAttributes": {
      "placeholder": "Enter your last name"
    },
    "labelDisplayType": "floating"
  } only %}

  {% include "@bolt/form-element-demo-input-element.twig" with {
    "title": "Email Address",
    "inputAttributes": {
      "placeholder": "Enter your email address",
      "type": "email"
    },
    "labelDisplayType": "floating"
  } only %}

  {% include "@bolt/form-element-demo-input-element.twig" with {
    "title": "Title",
    "inputAttributes": {
      "placeholder": "Enter your current job title"
    },
    "labelDisplayType": "floating"
  } only %}

  {% include "@bolt/form-element-demo-input-element.twig" with {
    "title": "Company Name",
    "inputAttributes": {
      "placeholder": "Enter the name of your company"
    },
    "labelDisplayType": "floating"
  } only %}

  {% include "@bolt/form-element-demo-select.twig" with {
    "title": "Country",
    "options": [
      {
        "type": "option",
        "value": "",
        "label": "- Select a Country -"
      },
      {
        "type": "option",
        "value": "a",
        "label": "Argentina"
      },
      {
        "type": "option",
        "value": "b",
        "label": "Belgium"
      },
      {
        "type": "option",
        "value": "c",
        "label": "Croatia"
      }
    ]
  } only %}

  {% include "@bolt/form-element-demo-checkbox.twig" with {
    "labelTitle": "Receive periodic emails on key analyst reports, Pega events, and important news.  You can unsubscribe at any time",
    "elementId": "receive-emails",
    "labelDisplayType": "inline"
  } only %}

  {% include "@bolt/form-input.twig" with {
    "attributes": {
      "type": "submit",
      "value": "Download Now"
    }
  } only %}

{% endset %}
