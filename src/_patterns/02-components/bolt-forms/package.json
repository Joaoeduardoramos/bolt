{
  "name": "@bolt/components-forms",
  "description": "Bolt component for forms and form elements",
  "keywords": [
    "bolt design system",
    "bolt",
    "ui toolkit",
    "design system"
  ],
  "version": "0.0.0",
  "author": "Remy Denton",
  "homepage": "https://boltdesignsystem.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pega-digital/bolt/tree/master/packages/bolt-component-forms"
  },
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "style": "src/forms.scss",
  "main": "dist/bolt-form.min.js",
  "module:dev": "src/form.js",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm-run-all --parallel build:*",
    "build:bolt": "./node_modules/@bolt/build-webpack/node_modules/.bin/webpack --env.production --env.cli --config ./node_modules/@bolt/build-webpack/webpack.config.cli.js --entry ./src/form --output-filename='bolt-form.min.js' --output-public-path /scripts/",
    "build:wwwd8": "./node_modules/@bolt/build-webpack/node_modules/.bin/webpack --env.production --env.cli --config ./node_modules/@bolt/build-webpack/webpack.config.cli.js --entry ./src/form --output-filename='bolt-form.wwwd8.min.js' --output-public-path /themes/custom/pegawww_theme/node_modules/@bolt/components-form/dist/"
  }
}
