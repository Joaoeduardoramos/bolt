{% endblock %}

{% block main_content %}
  {% embed "@bolt/band--feature.twig" with {
    teaserPosition: "left",
    teaserWidth: "2/3",
    size: "large",
    full: true,
    theme: "dark",
    background: {
      opacity: "heavy",
      fill: "gradient",
      focalPoint: {
        vertical: "center",
        horizontal: "center"
      },
      contentItems: [{
        pattern: "image",
        src: "/images/sample/product-background-image.jpg"
      }]
    },
    primaryTeaser: {
      eyebrow: {
        text: "Products",
        icon: {
          name: "arrow-left",
          position: "before"
        },
        url: "pega.com"
      },
      headlines: [
        {
          type: "headline",
          text: "CRM Applications for Real-Time Engagement",
          size: "xxxlarge",
          tag: "h1"
        },
        {
          type: "subheadline",
          text: "Pega’s AI powered CRM Suite is transforming the way enterprises drive greater engagement across the entire customer journey.",
          size: "xxlarge",
          tag: "p"
        }
      ],
      buttons: [
        {
          text: "Call to Action",
          style: "primary",
          url: "https://www.google.com"
        }
      ]
    }
  } only %}{% endembed %}



