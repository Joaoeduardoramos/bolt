{% extends "@bolt/default-template.twig" %}

{% block global_header %}
  {% include "@bolt/page-header.twig" %}
{% endblock %}

{% block main_content %}

  {% embed "@bolt/band.twig" with {
    theme: "dark",
    size: "large",
    fullBleed: true
  } only %}
    {% block band_content %}
      {% include "@bolt/headline.twig" with {
        size: "xxxlarge",
        text: "In The News"
      } only %}
      {% include "@bolt/subheadline.twig" with {
        size: "xxlarge",
        text: "See the latest updates and media coverage about Pega from around the world."
      } only %}
      {% include "@bolt/button-group.twig" with {
        buttons: [
          {
            text: "Press Releases",
            url: "http://pega.com",
            style: "secondary",
            width: "full@small"
          },
          {
            text: "Media Coverage",
            url: "http://pega.com",
            style: "secondary",
            width: "full@small",
          }
        ],
      } only %}
    {% endblock %}
  {% endembed %}

