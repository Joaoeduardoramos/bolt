{# wwo stands for "with-without" #}
<div id="c-pega-wwo" class="c-pega-wwo t-bolt-xdark">
  <div id="c-pega-wwo__wrapper" class="c-pega-wwo__wrapper" anim-in-progress='1'>
    <div class="c-pega-wwo__inner">
      <div class="c-pega-wwo__title-and-toggle--wrapper">
        <h2 class="c-pega-wwo__title">
          <bolt-animate class="c-pega-wwo__title--animate" group="initial" in="fade-in-slide-up" in-order="3" in-duration="200">
            <span>How Pega technology delivers 1-to-1 customer engagement</span>
          </bolt-animate>
        </h2>
        <div class="c-pega-wwo__toggle">
          <bolt-animate group="initial" in="fade-in-slide-up" in-order="5" in-duration="200">
            <ul class="wwo-toggle">
              <li class="wwo-toggle__item">
                <input class="wwo-toggle__input c-pega-www__toggle-input reset" type="radio" name="c-pega-www__toggle-input" id="wo" checked>
                <label class="wwo-toggle__label" for="radio1">Without Pega</label>
              </li>
              <li class="wwo-toggle__item">
                <input class="wwo-toggle__input c-pega-www__toggle-input reset" type="radio" name="c-pega-www__toggle-input" id="w">
                <label class="wwo-toggle__label" for="radio2">With Pega</label>
                <div aria-hidden="true" class="wwo-toggle__toggle"><span class="wwo-toggle__marker"></span></div>
              </li>
            </ul>
          </bolt-animate>
        </div>
      </div>
  </div>
</div>
