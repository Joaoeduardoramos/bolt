{
  "name": "@bolt/pattern-library",
  "version": "0.0.0",
  "description": "Bolt Pattern Library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-design-system/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bolt-design-system/bolt/issues"
  },
  "homepage": "https://github.com/bolt-design-system/bolt#readme",
  "dependencies": {
    "@bolt/build-tools": "^0.3.0",
    "@bolt/bolt": "^0.3.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "snyk": true,
  "lint-staged": {
    "*.md": [
      "remark --quiet --frail --no-stdout"
    ],
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "now": {
    "files": [
      "bolt-website",
      "bolt-website/pattern-lab/styleguide/bower_components/**/*"
    ]
  }
}
