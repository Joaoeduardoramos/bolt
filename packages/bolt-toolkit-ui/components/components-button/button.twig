{% set button_styles = ['primary', 'secondary', 'inverted', 'text', 'power'] %}

{% set button_classes = [
  'c-bolt-button',
  style in button_styles ? 'c-bolt-button--' ~ style : ''
] %}

<a href="" class="{{ button_classes | join(' ')}}">
  <span class="c-bolt-button__text">{{ text }}</span>
</a>
