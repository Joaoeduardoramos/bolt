{
  "name": "bolt/twig-extensions",
  "description": "Custom Twig Extensions Used By Bolt",
  "vendor": "bolt",
  "type": "patternlab-plugin",
  "authors": [
    {
      "name": "Salem Ghoweri",
      "role": "Maintainer"
    }
  ],
  "autoload": {
    "psr-0": {
      "PatternLab\\TwigExtensions": "src/"
    }
  },
  "require": {
    "ksubileau/color-thief-php": "^1.3",
    "gregwar/image": "*",
    "mexitek/phpcolors": "^0.4.0",
  },
  "extra": {
    "patternlab": {
      "dist": {
        "sourceDir": [
          { "filters/*": "_twig-components/filters/*" },
          { "functions/*": "_twig-components/functions/*" },
          { "tags/*": "_twig-components/tags/*" },
          { "tests/*": "_twig-components/tests/*" }
        ]
      }
    }
  }
}