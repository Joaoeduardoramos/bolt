{% set toolbar_content = block("content") %}

<div class="t-bolt-xdark c-bolt-toolbar c-bolt-toolbar--{{ gradientName | default('purple') }}">
  <div class="c-bolt-toolbar__inner">
    {% if title %}
      <div class="c-bolt-toolbar__title">
        {% block toolbar_title %}
          {% include "@bolt-components-navbar/_navbar-title.twig" with title only %}
        {% endblock %}
      </div>
    {% endif %}

    {% if toolbar_content %}
      <div class="c-bolt-toolbar__content">
        {{ toolbar_content | default(content) }}
      </div>
    {% endif %}
  </div>
</div>