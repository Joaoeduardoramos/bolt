{% set schema = bolt.data.components["@bolt-components-stack"].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self) | raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set inner_attributes = create_attribute({}) %}

{#
  Classes passed in via attributes can be anything EXCEPT c-bolt-* classes, which should never be passed in via attributes.
#}
{% set outer_classes = [] %}

{% for class in this.data.class %}
  {% if class starts with "c-bolt-" == false %}
    {% set outer_classes = outer_classes|merge([class]) %}
  {% endif %}
{% endfor %}

<bolt-stack
  {% if outer_classes %} class="{{ outer_classes|join(' ') }}" {% endif %}
  {{ this.data|without("content")|without("class") }}
>
  <div is="shadow-root">
    {{ content }}
  </div>
</bolt-stack>
