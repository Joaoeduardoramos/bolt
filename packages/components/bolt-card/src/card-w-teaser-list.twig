{% extends "@bolt-components-card/card.twig" %}


{% block card_body %}
  {% if teasers %}
    {% set teaserItems = {} %}
    {% set items = [] %}


    {% for teaser in teasers %}

      {% set teaserItem %}
        {% include "@bolt-components-teaser/teaser.twig" with teaser only %}
      {% endset %}

      {% set items = items | merge([{
        "text": teaserItem
      }]) %}

    {% endfor %}


    {% set teaserItems = teaserItems | merge({
      "contentItems": items
    }) %}

    {% include "@bolt/ui-list.twig" with teaserItems only %}
  {% endif %}

{% endblock %}
