{% set shareSources = sources is not empty ? sources : ['facebook','twitter','linkedin'] %}
{% set emailShare = email is sameas(false) ? false : (email is null ? true : email) %}
{% set copyShare = copy is sameas(false) ? false : (copy is null ? true : copy) %}
{% set visible = visibility is not empty ? visibility : 'visible' %}
{% set isFlat = flatLayout is sameas(false) ? false : (flatLayout is null ? false : flatLayout) %}

{% set attributes = create_attribute(attributes|default({})) %}
{% set classes = [
  'c-bolt-share',
  'c-bolt-share--' ~ visible,
  isFlat is sameas(false) ? 'c-botl-share--normal-layout'
] %}

<bolt-share bolt-component>
  <div {{ attributes.addClass(classes) }}>
    {% include "@bolt-components-tooltip/tooltip.twig" with {
      trigger: {
        type: "button",
        text: "Share",
        transform: "uppercase",
        icon: {
          name: "share1",
          size: "medium"
        },
        toggle: {
          text: "Close",
          name: "close-solid"
        }
      },
      content: "Here is a tooltip! And it even comes with a button toggle!",
      id: "tooltip-share",
      type: "action",
      position: "up",
      noWrap: false,
      spacing: "none"
    } only %}
  </div>
</bolt-share>

{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-share/share.schema.yml', _self) }}
{% endif %}