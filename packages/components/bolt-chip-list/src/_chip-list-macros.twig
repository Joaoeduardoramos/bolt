{% macro truncateTrigger(iconName, size, inputId) %}
  <replace-with-grandchildren>
    <label class="c-bolt-chip-list__label" for="{{ inputId }}">
      {% include "@bolt/chip.twig" with {
        size: size,
        icon: {
          name: iconName
        },
        iconOnly: true
      } only %}
    </label>
  </replace-with-grandchildren>
{% endmacro %}
