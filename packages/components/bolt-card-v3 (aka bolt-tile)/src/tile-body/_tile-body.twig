{% if tag == "figure" %}
	{% set content_tag = "figcaption" %}
{% else %}
	{% set content_tag = "div" %}
{% endif %}

{% set tile_body_content = body.content %}

<bolt-tile-body>
	<replace-with-children class="c-bolt-tile__body">
		{% block body %}
			{% if tile_body_content %}
				{# @todo: The replace function is a hack to get around the utf-8 bug. #}
				{{ tile_body_content | join | replace({"UTF-8": ""}) }}
			{% else %}
				{% set tile_eyebrow = body.eyebrow %}
				{% set tile_headline = body.headline %}
				{% set tile_paragraph = body.paragraph %}

				{% if tile_eyebrow %}
					{% include "@bolt-components-headline/eyebrow.twig" with {
            text: tile_eyebrow,
          } only %}
				{% endif %}
				{% if tile_headline %}
					{% include "@bolt-components-headline/headline.twig" with {
            text: tile_headline,
            size: "large",
          } only %}
				{% endif %}
				{% if tile_paragraph %}
					{% include "@bolt-components-headline/text.twig" with {
            text: tile_paragraph,
          } only %}
				{% endif %}
			{% endif %}
		{% endblock %}
	</replace-with-children>
</bolt-tile-body>
