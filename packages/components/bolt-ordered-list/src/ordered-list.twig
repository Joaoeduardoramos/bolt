{% if enable_json_schema_validation %}
  {{ validate_data_schema(bolt.data.components['@bolt-components-ordered-list'].schema, _self) | raw }}
{% endif %}

{% set attributes = create_attribute(attributes|default({})) %}

{% set base_class = "c-bolt-ordered-list" %}


{% set classes = [
  base_class
] %}

{% if contentItems %}
  {% set items = contentItems %}
{% endif %}

<bolt-ordered-list>
  <replace-with-grandchildren>
    <ol {{ attributes.addClass(classes) }}>
      {% for item in items %}
        {% include "@bolt-components-ordered-list/_ordered-list-item.twig" %}
      {% endfor %}
    </ol>
  </replace-with-grandchildren>
</bolt-ordered-list>
