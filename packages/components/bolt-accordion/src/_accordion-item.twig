{% set random_uuid = random() %}
{% set primary_uuid = uuid ? "c-bolt-accordion-item-#{uuid}" : "c-bolt-accordion-item-#{random_uuid}" %}
{% set secondary_uuid = uuid ? "c-bolt-accordion-item-inner-#{uuid}" : "c-bolt-accordion-item-inner-#{random_uuid}" %}

<bolt-accordion-item {{ uuid ? "uuid" : uuid }} {{ auto_open ? "auto-open" : '' }}>
  <input class="c-bolt-accordion__state" type="checkbox" id="{{ primary_uuid }}" {% if autoOpen %} checked{% endif %}>

  <replace-with-grandchildren class="c-bolt-accordion-item {{ collapse ? "c-bolt-accordion--collapse@small" : "" }}" id="{{ secondary_uuid }}">

    <div class="c-bolt-accordion__header {% if center and center == true %}c-bolt-accordion__header--center{% endif %}">
      <replace-with-grandchildren>
        <label class="c-bolt-accordion__header-label" for="{{ primary_uuid }}">
          <h3 slot="header">{{ title | default("Toggle Accordion")}}</h3 slot="header">
        </label>
      </replace-with-grandchildren>

      <a href="#{{ primary_uuid }}" class="c-bolt-accordion__header-link c-bolt-accordion__header-link c-bolt-accordion__header-link--open">
        <span class="c-bolt-accordion__toggle-text">{{ openLabel | default("Open Accordion")}}</span>
      </a>

      <a href="#{{ secondary_uuid }}" class="c-bolt-accordion__header-link c-bolt-accordion__header-link--close">
        <span class="c-bolt-accordion__toggle-text">{{ closeLabel | default("Close Accordion")}}</span>
      </a>
    </div>

    <replace-with-grandchildren class="c-bolt-accordion__content">
      <div class="c-bolt-accordion__content-inner">
        {{ content }}
      </div>
    </replace-with-grandchildren>

  </replace-with-grandchildren>
</bolt-accordion-item>