{% if enable_json_schema_validation %}
  {{ validate_data_schema(bolt.data.components['@bolt-components-accordion'].schema, _self) | raw }}
{% endif %}

{% set multiple = multiple|default(false) %}

<div class="o-bolt-wrapper">
  <div class="u-bolt-margin-bottom-large">
    <bolt-accordion
      {{ multiple ? "multiple" : "" }}
      {{ center ? "center" : "" }}
      >
      {% if items %}
        <replace-with-children class="c-bolt-accordion">
          {% for item in items %}
            {% include "@bolt-components-accordion/_accordion-item.twig" with item only %}
          {% endfor %}
        </replace-with-children>
      {% endif %}
    </bolt-accordion>
  </div>
</div>