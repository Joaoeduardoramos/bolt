{% extends "@bolt-components-band/band.twig" %}
 
{% block outer_band_content %}
  <bolt-grid {% if size %} size="{{ size }}" {% endif %}>
    {% if pinned_content.content %}
      <bolt-grid-item 
        start-row="1"
        align="{{ pinned_content.position.valign | default("end")}}"
        justify="{{ pinned_content.position.align | default("center")}}"
      >
        {{ pinned_content.content }}
      </bolt-grid-item>
    {% endif %}

    <bolt-grid-item>
      {{ parent () }}
    </bolt-grid-item>
  </bolt-grid>
{% endblock %}