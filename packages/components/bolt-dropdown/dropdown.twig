{% set collapse = collapse | default(false) %}
{% set _content = content | default(block('content')) %}

<bolt-dropdown
  {{ collapse ? "collapse" : "" }}
  {{ center ? "center" : "" }}
  {% if title %}title="{{ title }}" {% endif %}
>
  {% block content %}
    {% if _content %}
      {% include "@bolt-components-dropdown/_dropdown-item.twig" %}
    {% endif %}
  {% endblock %}
</bolt-dropdown>

{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-dropdown/dropdown.schema.yml', _self) | raw }}
{% endif %}
