{% set schema = bolt.data.components['@bolt-components-code'].schema %}

{% set prefix = "c-bolt-" %}
{% set componentName = "code" %}
{% set baseClass = prefix ~ componentName %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set displayOptions = schema.properties.display.enum %}
{% set display = display in displayOptions ? display : schema.properties.display.default %}

{% set langOptions = schema.properties.lang.enum %}
{% set lang = lang in langOptions ? lang : schema.properties.lang.default %}

{% set classes = [
  baseClass
] %}

{% set codeContent %}{% spaceless %}
  <code class="{{ "#{baseClass}__code #{baseClass}__code--#{display} nohighlight" }}" is="shadow-root">{% block children %}{{ code }}{% endblock %}</code>
{% endspaceless %}{% endset %}




<bolt-{{ componentName }}
  {% if display %} display="{{ display }}" {% endif %}
  {% if lang %} lang="{{ lang }}" {% endif %}
  bolt-component
>
  {% if display == "block" %}
    <pre {{ attributes.addClass(classes) }}>{{ codeContent }}</pre>
  {% elseif display == "inline" %}
    {{ codeContent }}
  {% endif %}
</bolt-{{ componentName }}>




{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-code/code.schema.yml', _self) | raw }}
{% endif %}
